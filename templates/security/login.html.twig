{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title' | trans }}{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>{{ 'login.title' | trans }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? Login Section Start -->
    <section class="login-section section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-10">
                    <div class="login-form-wrapper">
                        <div class="login-form">
                            <!-- Section Title -->
                            <div class="section-tittle text-center mb-50">
                                <h2>{{ 'login.section_title' | trans }}</h2>
                                <p>{{ 'login.section_description' | trans }}</p>
                            </div>

                            {% if error %}
                                <script>
                                    document.addEventListener('DOMContentLoaded', function() {
                                        showToast('{{ error.messageKey|trans(error.messageData, 'security')|escape('js') }}', 'error', 5000);
                                    });
                                </script>
                            {% endif %}

                            {% if app.user %}
                                <script>
                                    document.addEventListener('DOMContentLoaded', function() {
                                        showToast('{{ 'login.already_logged_in' | trans }} {{ app.user.userIdentifier }}.', 'info', 5000);
                                    });
                                </script>
                            {% endif %}

                            <form method="post">
                                <div class="form-group mb-30">
                                    <label for="inputEmail" class="form-label">
                                        <i class="fas fa-envelope"></i> {{ 'login.email_label' | trans }}
                                    </label>
                                    <input type="email"
                                           value="{{ last_username }}"
                                           name="email"
                                           id="inputEmail"
                                           class="form-control form-control-lg"
                                           placeholder="your@email.com"
                                           autocomplete="email"
                                           required
                                           autofocus>
                                </div>

                                <div class="form-group mb-30">
                                    <label for="inputPassword" class="form-label">
                                        <i class="fas fa-lock"></i> {{ 'login.password_label' | trans }}
                                    </label>
                                    <div class="password-field-wrapper">
                                        <input type="password"
                                               name="password"
                                               id="inputPassword"
                                               class="form-control form-control-lg password-field"
                                               placeholder="••••••••"
                                               autocomplete="current-password"
                                               required>
                                        <i class="fas fa-eye password-toggle-icon" data-target-id="inputPassword"></i>
                                    </div>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="form-check mb-30">
                                    <input type="checkbox"
                                           name="_remember_me"
                                           id="remember_me"
                                           class="form-check-input">
                                    <label for="remember_me" class="form-check-label">
                                        {{ 'login.remember_me' | trans }}
                                    </label>
                                </div>

                                <div class="d-grid gap-2 mb-30">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-sign-in-alt"></i> {{ 'login.submit' | trans }}
                                    </button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-2">
                                        {{ 'login.no_account' | trans }}
                                        <a href="{{ path('app_register') }}" class="text-primary fw-bold">
                                            {{ 'login.register_here' | trans }}
                                        </a>
                                    </p>
                                    <p class="mb-0">
                                        <a href="{{ path('app_forgot_password') }}" class="text-muted">
                                            <i class="fas fa-key"></i> {{ 'login.forgot_password' | trans }}
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Login Section End -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize password toggle
            const toggleIcon = document.querySelector('.password-toggle-icon');
            if (toggleIcon) {
                toggleIcon.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-target-id');
                    const passwordField = document.getElementById(targetId);

                    if (passwordField) {
                        if (passwordField.type === 'password') {
                            passwordField.type = 'text';
                            this.classList.remove('fa-eye');
                            this.classList.add('fa-eye-slash');
                        } else {
                            passwordField.type = 'password';
                            this.classList.remove('fa-eye-slash');
                            this.classList.add('fa-eye');
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}
