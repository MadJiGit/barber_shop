{% extends 'base.html.twig' %}

{% block title %}Нова парола - Barber Shop{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>Нова парола</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? Reset Password Section Start -->
    <section class="reset-password-section section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-10">
                    <div class="reset-password-wrapper">
                        <div class="reset-password-form">
                            <!-- Section Title -->
                            <div class="section-tittle text-center mb-50">
                                <h2>Задайте нова парола</h2>
                                <p>Изберете силна парола за вашия акаунт.</p>
                            </div>

                            {{ form_start(resetPasswordForm) }}

                                <div class="form-group mb-30">
                                    <label for="{{ resetPasswordForm.plainPassword.vars.id }}" class="form-label">
                                        <i class="fas fa-lock"></i> Нова парола
                                    </label>
                                    {{ form_widget(resetPasswordForm.plainPassword, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'Минимум 6 символа'
                                        }
                                    }) }}
                                    {{ form_errors(resetPasswordForm.plainPassword) }}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle"></i> Паролата трябва да е минимум 6 символа
                                    </small>
                                </div>

                                <div class="form-group mb-30">
                                    <label for="{{ resetPasswordForm.plainRepeatPassword.vars.id }}" class="form-label">
                                        <i class="fas fa-lock"></i> Потвърдете паролата
                                    </label>
                                    {{ form_widget(resetPasswordForm.plainRepeatPassword, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'Въведете паролата отново'
                                        }
                                    }) }}
                                    {{ form_errors(resetPasswordForm.plainRepeatPassword) }}
                                </div>

                                <div class="d-grid gap-2 mb-30">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-check"></i> Запази новата парола
                                    </button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">
                                        Спомняте си паролата?
                                        <a href="{{ path('app_login') }}" class="text-primary fw-bold">
                                            Влезте тук
                                        </a>
                                    </p>
                                </div>

                            {{ form_end(resetPasswordForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Reset Password Section End -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}
