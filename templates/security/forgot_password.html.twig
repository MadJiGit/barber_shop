{% extends 'base.html.twig' %}

{% block title %}{{ 'forgot_password.title' | trans }}{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>{{ 'forgot_password.hero_title' | trans }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? Forgot Password Section Start -->
    <section class="forgot-password-section section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-10">
                    <div class="forgot-password-wrapper">
                        <div class="forgot-password-form">
                            <!-- Section Title -->
                            <div class="section-tittle text-center mb-50">
                                <h2>{{ 'forgot_password.section_title' | trans }}</h2>
                                <p>{{ 'forgot_password.section_description' | trans }}</p>
                            </div>

                            {{ form_start(forgotPasswordForm) }}

                                <div class="form-group mb-30">
                                    <label for="{{ forgotPasswordForm.email.vars.id }}" class="form-label">
                                        <i class="fas fa-envelope"></i> {{ 'forgot_password.email_label' | trans }}
                                    </label>
                                    {{ form_widget(forgotPasswordForm.email, {
                                        attr: {
                                            class: 'form-control form-control-lg',
                                            placeholder: 'forgot_password.email_placeholder' | trans
                                        }
                                    }) }}
                                    {{ form_errors(forgotPasswordForm.email) }}
                                </div>

                                <div class="d-grid gap-2 mb-30">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-paper-plane"></i> {{ 'forgot_password.submit' | trans }}
                                    </button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">
                                        {{ 'forgot_password.remember_password' | trans }}
                                        <a href="{{ path('app_login') }}" class="text-primary fw-bold">
                                            {{ 'forgot_password.to_login' | trans }}
                                        </a>
                                    </p>
                                </div>

                            {{ form_end(forgotPasswordForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Forgot Password Section End -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}
