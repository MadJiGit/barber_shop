{% extends 'base.html.twig' %}

{% block title %}{{ 'error403.title' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/error_pages.css') }}">
{% endblock %}

{% block body %}
<!--? Breadcrumb Area Start -->
<div class="slider-area">
    <div class="slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 text-center">
                        <h2>{{ 'error403.heading' | trans }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Area End -->

<section class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-10">
                <div class="text-center">
                    <div class="error-icon mb-4">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h1 class="display-1 mb-4">403</h1>
                    <h2 class="mb-4">{{ 'error403.heading' | trans }}</h2>
                    <p class="lead mb-4">
                        {{ 'error403.description' | trans }}
                    </p>
                    <p class="text-muted mb-5">
                        {{ 'error403.advice' | trans }}
                    </p>
                    <div class="mt-5">
                        <a href="{{ path('main') }}" class="btn btn-primary btn-lg mr-3">
                            <i class="fas fa-home"></i> {{ 'error403.button_home' | trans }}
                        </a>
                        {% if app.user %}
                            <a href="{{ path('profile_edit', {id: app.user.id}) }}" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-user"></i> {{ 'error403.button_profile' | trans }}
                            </a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> {{ 'error403.button_login' | trans }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
