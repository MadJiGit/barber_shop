{% extends 'base.html.twig' %}

{#{% block title %}–ì—Ä–∞—Ñ–∏—Ü–∏ –Ω–∞ –±—Ä—ä—Å–Ω–∞—Ä–∏{% endblock %}#}
{% block title %}{{ 'manager_dashboard.nav.barber_schedules' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/barber_calendar.css') }}">
{% endblock %}

{% block body %}
<!--? Hero Start -->
<div class="slider-area2">
    <div class="slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 pt-70 text-center">
{#                        <h2>–ì—Ä–∞—Ñ–∏—Ü–∏ –Ω–∞ –±—Ä—ä—Å–Ω–∞—Ä–∏</h2>#}
                        <h2>{{ 'manager_dashboard.nav.barber_schedules' | trans }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1><i class="fas fa-clock"></i> {{ 'barber_schedules.title' | trans }}</h1>
            <p class="text-muted">{{ 'barber_schedules.subtitle' | trans }}</p>
        </div>
    </div>

    {# Navigation #}
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="{{ path('manager_dashboard') }}" class="btn btn-outline-primary">
                    <i class="fas fa-home"></i> {{ 'barber_schedules.nav.dashboard' | trans }}
                </a>
                <a href="{{ path('manager_appointments') }}" class="btn btn-outline-primary">
                    <i class="fas fa-calendar-alt"></i> {{ 'barber_schedules.nav.all_appointments' | trans }}
                </a>
                <a href="{{ path('manager_barber_schedules') }}" class="btn btn-primary active">
                    <i class="fas fa-clock"></i> {{ 'barber_schedules.nav.barber_schedules' | trans }}
                </a>
            </div>
        </div>
    </div>

    {# Barber Selection #}
    <div class="row mb-4">
        <div class="col-md-6">
            <label for="barberSelect" class="form-label">
{#                <strong>{{ 'barber_schedules.select.label' | trans }}</strong>#}
            </label>
            <select id="barberSelect" class="form-control" onchange="selectBarber(this.value)">
                <option value="">{{ 'barber_schedules.select.placeholder' | trans }}</option>
                {% for barber in barbers %}
                    <option value="{{ barber.id }}" {% if selectedBarber and selectedBarber.id == barber.id %}selected{% endif %}>
                        {{ barber.firstName }} {{ barber.lastName }} ({{ ('roles.' ~ barber.getBarberRole()) | trans }})
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>

    {# Calendar Section (only show if barber is selected) #}
    {% if selectedBarber %}
        <div class="row mb-4">
            <div class="col-12">
                <h3>{{ selectedBarber.firstName }} {{ selectedBarber.lastName }} - {{ monthName }} {{ year }}</h3>
            </div>
        </div>

        <div class="container-fluid py-4">
            <!-- Calendar Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('manager_barber_schedules', {barber_id: selectedBarber.id, year: prevYear, month: prevMonth}) }}"
                           class="btn btn-outline-secondary">
                            <i class="fas fa-chevron-left"></i> {{ 'barber_schedules.calendar.prev' | trans }}
                        </a>
                        <h2 class="mb-0">
                            <i class="fas fa-calendar-alt"></i> {{ monthName }} {{ year }}
                        </h2>
                        <a href="{{ path('manager_barber_schedules', {barber_id: selectedBarber.id, year: nextYear, month: nextMonth}) }}"
                           class="btn btn-outline-secondary">
                            {{ 'barber_schedules.calendar.next' | trans }} <i class="fas fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Legend -->
            <div class="row mb-3">
                <div class="col-12">
                    <div class="calendar-legend d-flex justify-content-center gap-3">
                        <span class="legend-item">
                            <span class="legend-box legend-available"></span> {{ 'barber_schedules.legend.available' | trans }}
                        </span>
                        <span class="legend-item">
                            <span class="legend-box legend-partial"></span> {{ 'barber_schedules.legend.partial' | trans }}
                        </span>
                        <span class="legend-item">
                            <span class="legend-box legend-full"></span> {{ 'barber_schedules.legend.full' | trans }}
                        </span>
                        <span class="legend-item">
                            <span class="legend-box legend-unavailable"></span> {{ 'barber_schedules.legend.unavailable' | trans }}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Calendar Grid -->
            <div class="row">
                <div class="col-12">
                    <div class="calendar-grid">
                        <!-- Weekday headers -->
                        <div class="calendar-header">
                            <div class="calendar-day-name">{{ 'barber_schedules.weekdays.monday' | trans }}</div>
                            <div class="calendar-day-name">{{ 'barber_schedules.weekdays.tuesday' | trans }}</div>
                            <div class="calendar-day-name">{{ 'barber_schedules.weekdays.wednesday' | trans }}</div>
                            <div class="calendar-day-name">{{ 'barber_schedules.weekdays.thursday' | trans }}</div>
                            <div class="calendar-day-name">{{ 'barber_schedules.weekdays.friday' | trans }}</div>
                            <div class="calendar-day-name">{{ 'barber_schedules.weekdays.saturday' | trans }}</div>
                            <div class="calendar-day-name">{{ 'barber_schedules.weekdays.sunday' | trans }}</div>
                        </div>

                        <!-- Calendar days -->
                        <div class="calendar-body">
                            {% set firstDayOfWeek = calendar[0].dayOfWeek %}
                            {% set offset = firstDayOfWeek == 0 ? 6 : firstDayOfWeek - 1 %}

                            {# Empty cells before first day #}
                            {% if offset > 0 %}
                                {% for i in 1..offset %}
                                    <div class="calendar-cell empty"></div>
                                {% endfor %}
                            {% endif %}

                            {# Actual calendar days #}
                            {% for day in calendar %}
                                {% set dateObj = day.date|date('Y-m-d') %}
                                {% set dayNum = day.date|date('d') %}

                                <div class="calendar-cell calendar-day status-{{ day.status }}"
                                     data-date="{{ day.date }}"
                                     data-working="{{ day.working ? 'true' : 'false' }}"
                                     data-occupied="{{ day.occupiedSlots }}"
                                     data-total="{{ day.totalSlots }}"
                                     onclick="openDayModal('{{ day.date }}')">
                                    <div class="day-number">{{ dayNum }}</div>
                                    {% if day.working %}
                                        <div class="day-info">
                                            <small>{{ day.occupiedSlots }}/{{ day.totalSlots }}</small>
                                        </div>
                                    {% else %}
                                        <div class="day-info">
                                            <small>{{ 'barber_schedules.day.day_off' | trans }}</small>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> {{ 'barber_schedules.alert.select_barber' | trans }}
                </div>
            </div>
        </div>
    {% endif %}
</div>

<!-- Day Schedule Modal -->
<div class="modal fade" id="dayScheduleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span id="modalDate"></span> - <span id="modalDayName"></span>
                </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Loading indicator -->
                <div id="modalLoading" class="text-center py-4">
                    <i class="fas fa-spinner fa-spin fa-3x"></i>
                    <p class="mt-3">{{ 'barber_schedules.modal.loading' | trans }}</p>
                </div>

                <!-- Content -->
                <div id="modalContent" style="display: none;">
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="workingCheckbox" checked>
                        <label class="form-check-label" for="workingCheckbox">
                            <strong>{{ 'barber_schedules.modal.working_day' | trans }}</strong>
                        </label>
                    </div>

                    <div id="workingHoursSection">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label>{{ 'barber_schedules.modal.start' | trans }}</label>
                                <input type="time" class="form-control" id="startTime" value="09:00">
                            </div>
                            <div class="col-md-6">
                                <label>{{ 'barber_schedules.modal.end' | trans }}</label>
                                <input type="time" class="form-control" id="endTime" value="18:00">
                            </div>
                        </div>

                        <h6>{{ 'barber_schedules.modal.slots' | trans }}</h6>
                        <div id="timeSlotsContainer" class="time-slots-grid">
                            <!-- Time slots will be populated by JavaScript -->
                        </div>

                        <div class="mt-3">
                            <label>{{ 'barber_schedules.modal.reason' | trans }}</label>
                            <input type="text" class="form-control" id="scheduleReason"
                                   placeholder="{{ 'barber_schedules.modal.reason_placeholder' | trans }}">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times"></i> {{ 'barber_schedules.modal.cancel' | trans }}
                </button>
                <button type="button" class="btn btn-primary" onclick="saveSchedule()">
                    <i class="fas fa-save"></i> {{ 'barber_schedules.modal.save' | trans }}
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Translations for JavaScript
        const translations = {
            selectBarberFirst: "{{ 'barber_schedules.toast.select_barber_first' | trans }}",
            loadingError: "{{ 'barber_schedules.toast.loading_error' | trans }}",
            nonWorkingDefault: "{{ 'barber_schedules.modal.non_working_default' | trans }}",
            slotLocked: "{{ 'barber_schedules.modal.slot_locked' | trans }}",
            slotExcluded: "{{ 'barber_schedules.modal.slot_excluded' | trans }}",
            saveSuccess: "{{ 'barber_schedules.toast.save_success' | trans }}",
            unknownError: "{{ 'barber_schedules.toast.unknown_error' | trans }}",
            saveError: "{{ 'barber_schedules.toast.save_error' | trans }}"
        };

        // Store selected barber ID for AJAX calls
        let selectedBarberId = {{ selectedBarber ? selectedBarber.id : 'null' }};

        function selectBarber(barberId) {
            if (barberId) {
                window.location.href = '{{ path('manager_barber_schedules') }}?barber_id=' + barberId;
            }
        }

        // Global variables
        let currentDate = null;
        let currentSlots = [];

        /**
         * Open day modal to edit schedule
         */
        function openDayModal(date) {
            if (!selectedBarberId) {
                Toast.error(translations.selectBarberFirst);
                return;
            }

            currentDate = date;
            const modal = $('#dayScheduleModal');

            // Reset modal
            $('#modalLoading').show();
            $('#modalContent').hide();

            // Format date for display
            const dateObj = new Date(date);
            const options = { day: 'numeric', month: 'long', year: 'numeric' };
            $('#modalDate').text(dateObj.toLocaleDateString('bg-BG', options));

            modal.modal('show');

            // Load day schedule via AJAX
            fetch(`/manager/barber/${selectedBarberId}/schedule/day/${date}`)
                .then(response => response.json())
                .then(data => {
                    $('#modalDayName').text(data.dayOfWeek);
                    currentSlots = data.slots;

                    renderTimeSlots(data.slots);

                    $('#modalLoading').hide();
                    $('#modalContent').show();
                })
                .catch(error => {
                    console.error('Error loading schedule:', error);
                    Toast.error(translations.loadingError);
                    modal.modal('hide');
                });
        }

        /**
         * Render time slots in modal
         */
        function renderTimeSlots(slots) {
            const container = $('#timeSlotsContainer');
            container.empty();

            if (slots.length === 0) {
                container.html(`<p class="text-muted">${translations.nonWorkingDefault}</p>`);
                $('#workingCheckbox').prop('checked', false);
                $('#workingHoursSection').hide();
                return;
            }

            $('#workingCheckbox').prop('checked', true);
            $('#workingHoursSection').show();

            slots.forEach(slot => {
                const div = $('<div>').addClass('time-slot-checkbox');

                if (slot.locked) {
                    // Locked slots (with client) - disabled and checked
                    div.addClass('locked');
                    div.html(`
                        <input type="checkbox" disabled checked>
                        <label>
                            ${slot.time}
                            <span class="client-name">üîí ${slot.client || translations.slotLocked}</span>
                        </label>
                    `);
                } else {
                    // Available or excluded slots - manager can check/uncheck
                    const checked = slot.available ? 'checked' : '';
                    const label = slot.available
                        ? `${slot.time}`
                        : `${slot.time} <span class="text-danger">${translations.slotExcluded}</span>`;
                    div.html(`
                        <input type="checkbox" ${checked} data-time="${slot.time}">
                        <label>${label}</label>
                    `);
                }

                container.append(div);
            });
        }

        /**
         * Working checkbox toggle
         */
        $(document).on('change', '#workingCheckbox', function() {
            if ($(this).is(':checked')) {
                $('#workingHoursSection').show();
            } else {
                $('#workingHoursSection').hide();
            }
        });

        /**
         * Save schedule via AJAX
         */
        function saveSchedule() {
            if (!selectedBarberId) {
                Toast.error(translations.selectBarberFirst);
                return;
            }

            const isWorking = $('#workingCheckbox').is(':checked');
            const startTime = $('#startTime').val();
            const endTime = $('#endTime').val();
            const reason = $('#scheduleReason').val();

            // Get excluded slots (unchecked available slots)
            const excludedSlots = [];
            $('#timeSlotsContainer input[type="checkbox"]:not(:disabled)').each(function() {
                if (!$(this).is(':checked')) {
                    excludedSlots.push($(this).data('time'));
                }
            });

            const data = {
                date: currentDate,
                is_available: isWorking,
                start_time: isWorking ? startTime : null,
                end_time: isWorking ? endTime : null,
                excluded_slots: excludedSlots.length > 0 ? excludedSlots : null,
                reason: reason || null
            };

            fetch(`/manager/barber/${selectedBarberId}/schedule/save`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    Toast.success(translations.saveSuccess);
                    $('#dayScheduleModal').modal('hide');
                    // Reload page to show updated calendar (preserve barber_id)
                    const currentUrl = new URL(window.location.href);
                    window.location.href = currentUrl.href;
                } else {
                    Toast.error(result.error || translations.unknownError);
                }
            })
            .catch(error => {
                console.error('Error saving schedule:', error);
                Toast.error(translations.saveError);
            });
        }
    </script>
{% endblock %}
