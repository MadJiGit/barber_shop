{% block javascripts %}
    {{ parent() }}
    <script>
        // Store selected barber ID for AJAX calls
        let selectedBarberId = {{ selectedBarber ? selectedBarber.id : 'null' }};

        function selectBarber(barberId) {
            if (barberId) {
                window.location.href = '{{ path('manager_barber_schedules') }}?barber_id=' + barberId;
            }
        }

        // Global variables
        let currentDate = null;
        let currentSlots = [];

        /**
         * Open day modal to edit schedule
         */
        function openDayModal(date) {
            if (!selectedBarberId) {
                Toast.error('–ú–æ–ª—è, –ø—ä—Ä–≤–æ –∏–∑–±–µ—Ä–µ—Ç–µ –±—Ä—ä—Å–Ω–∞—Ä');
                return;
            }

            currentDate = date;
            const modal = $('#dayScheduleModal');

            // Reset modal
            $('#modalLoading').show();
            $('#modalContent').hide();

            // Format date for display
            const dateObj = new Date(date);
            const options = { day: 'numeric', month: 'long', year: 'numeric' };
            $('#modalDate').text(dateObj.toLocaleDateString('bg-BG', options));

            modal.modal('show');

            // Load day schedule via AJAX
            fetch(`/manager/barber/${selectedBarberId}/schedule/day/${date}`)
                .then(response => response.json())
                .then(data => {
                    $('#modalDayName').text(data.dayOfWeek);
                    currentSlots = data.slots;

                    renderTimeSlots(data.slots);

                    $('#modalLoading').hide();
                    $('#modalContent').show();
                })
                .catch(error => {
                    console.error('Error loading schedule:', error);
                    Toast.error('–ì—Ä–µ—à–∫–∞ –ø—Ä–∏ –∑–∞—Ä–µ–∂–¥–∞–Ω–µ –Ω–∞ –≥—Ä–∞—Ñ–∏–∫–∞');
                    modal.modal('hide');
                });
        }

        /**
         * Render time slots in modal
         */
        function renderTimeSlots(slots) {
            const container = $('#timeSlotsContainer');
            container.empty();

            if (slots.length === 0) {
                container.html('<p class="text-muted">–¢–æ–∑–∏ –¥–µ–Ω –Ω–µ –µ —Ä–∞–±–æ—Ç–µ–Ω –ø–æ –ø–æ–¥—Ä–∞–∑–±–∏—Ä–∞–Ω–µ.</p>');
                $('#workingCheckbox').prop('checked', false);
                $('#workingHoursSection').hide();
                return;
            }

            $('#workingCheckbox').prop('checked', true);
            $('#workingHoursSection').show();

            slots.forEach(slot => {
                const div = $('<div>').addClass('time-slot-checkbox');

                if (slot.locked) {
                    // Locked slots (with client) - disabled and checked
                    div.addClass('locked');
                    div.html(`
                        <input type="checkbox" disabled checked>
                        <label>
                            ${slot.time}
                            <span class="client-name">üîí ${slot.client || '–ó–∞–µ—Ç'}</span>
                        </label>
                    `);
                } else {
                    // Available or excluded slots - manager can check/uncheck
                    const checked = slot.available ? 'checked' : '';
                    const label = slot.available
                        ? `${slot.time}`
                        : `${slot.time} <span class="text-danger">(–∏–∑–∫–ª—é—á–µ–Ω –æ—Ç –±—Ä—ä—Å–Ω–∞—Ä)</span>`;
                    div.html(`
                        <input type="checkbox" ${checked} data-time="${slot.time}">
                        <label>${label}</label>
                    `);
                }

                container.append(div);
            });
        }

        /**
         * Working checkbox toggle
         */
        $(document).on('change', '#workingCheckbox', function() {
            if ($(this).is(':checked')) {
                $('#workingHoursSection').show();
            } else {
                $('#workingHoursSection').hide();
            }
        });

        /**
         * Save schedule via AJAX
         */
        function saveSchedule() {
            if (!selectedBarberId) {
                Toast.error('–ú–æ–ª—è, –ø—ä—Ä–≤–æ –∏–∑–±–µ—Ä–µ—Ç–µ –±—Ä—ä—Å–Ω–∞—Ä');
                return;
            }

            const isWorking = $('#workingCheckbox').is(':checked');
            const startTime = $('#startTime').val();
            const endTime = $('#endTime').val();
            const reason = $('#scheduleReason').val();

            // Get excluded slots (unchecked available slots)
            const excludedSlots = [];
            $('#timeSlotsContainer input[type="checkbox"]:not(:disabled)').each(function() {
                if (!$(this).is(':checked')) {
                    excludedSlots.push($(this).data('time'));
                }
            });

            const data = {
                date: currentDate,
                is_available: isWorking,
                start_time: isWorking ? startTime : null,
                end_time: isWorking ? endTime : null,
                excluded_slots: excludedSlots.length > 0 ? excludedSlots : null,
                reason: reason || null
            };

            fetch(`/manager/barber/${selectedBarberId}/schedule/save`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    Toast.success('–ì—Ä–∞—Ñ–∏–∫—ä—Ç –µ –∑–∞–ø–∞–∑–µ–Ω —É—Å–ø–µ—à–Ω–æ!');
                    $('#dayScheduleModal').modal('hide');
                    // Reload page to show updated calendar (preserve barber_id)
                    const currentUrl = new URL(window.location.href);
                    window.location.href = currentUrl.href;
                } else {
                    Toast.error(result.error || '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞ –≥—Ä–µ—à–∫–∞');
                }
            })
            .catch(error => {
                console.error('Error saving schedule:', error);
                Toast.error('–ì—Ä–µ—à–∫–∞ –ø—Ä–∏ –∑–∞–ø–∞–∑–≤–∞–Ω–µ –Ω–∞ –≥—Ä–∞—Ñ–∏–∫–∞');
            });
        }
    </script>
{% endblock %}
