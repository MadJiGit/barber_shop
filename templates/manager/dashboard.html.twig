{% extends 'base.html.twig' %}

{% block title %}{{ 'manager_dashboard.title' | trans }}{% endblock %}

{% block body %}
<!--? Hero Start -->
<div class="slider-area2">
    <div class="slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 pt-70 text-center">
                        <h2>{{ 'manager_dashboard.title' | trans }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1><i class="fas fa-chart-line"></i> {{ 'manager_dashboard.title' | trans }}</h1>
            <p class="text-muted">{{ 'manager_dashboard.subtitle' | trans }}</p>
        </div>
    </div>

    {# Navigation #}
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="{{ path('manager_dashboard') }}" class="btn btn-primary active">
                    <i class="fas fa-home"></i> {{ 'manager_dashboard.nav.dashboard' | trans }}
                </a>
                <a href="{{ path('manager_appointments') }}" class="btn btn-outline-primary">
                    <i class="fas fa-calendar-alt"></i> {{ 'manager_dashboard.nav.all_appointments' | trans }}
                </a>
                <a href="{{ path('manager_barber_schedules') }}" class="btn btn-outline-primary">
                    <i class="fas fa-user-clock"></i> {{ 'manager_dashboard.nav.barber_schedules' | trans }}
                </a>
            </div>
        </div>
    </div>

    {# Stats Cards #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calendar-day"></i> {{ 'manager_dashboard.stats.today' | trans }}</h5>
                    <h2>{{ todayStats.total }}</h2>
                    <p class="mb-0">
                        <small>
                            {{ 'manager_dashboard.stats.confirmed' | trans }}: {{ todayStats.confirmed }} |
                            {{ 'manager_dashboard.stats.completed' | trans }}: {{ todayStats.completed }}
                        </small>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calendar-week"></i> {{ 'manager_dashboard.stats.this_week' | trans }}</h5>
                    <h2>{{ weekCount }}</h2>
                    <p class="mb-0"><small>{{ 'manager_dashboard.stats.total_appointments' | trans }}</small></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calendar"></i> {{ 'manager_dashboard.stats.this_month' | trans }}</h5>
                    <h2>{{ monthCount }}</h2>
                    <p class="mb-0"><small>{{ 'manager_dashboard.stats.total_appointments' | trans }}</small></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-users"></i> {{ 'manager_dashboard.stats.barbers' | trans }}</h5>
                    <h2>{{ barbers|length }}</h2>
                    <p class="mb-0"><small>{{ 'manager_dashboard.stats.active_barbers' | trans }}</small></p>
                </div>
            </div>
        </div>
    </div>

    {# Today's Appointments #}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-clock"></i> {{ 'manager_dashboard.today.title' | trans }} ({{ today|date('d.m.Y') }})</h4>
                </div>
                <div class="card-body">
                    {% if todayAppointments is empty %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> {{ 'manager_dashboard.today.empty' | trans }}
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>{{ 'manager_dashboard.table.time' | trans }}</th>
                                        <th>{{ 'manager_dashboard.table.client' | trans }}</th>
                                        <th>{{ 'manager_dashboard.table.barber' | trans }}</th>
                                        <th>{{ 'manager_dashboard.table.service' | trans }}</th>
                                        <th>{{ 'manager_dashboard.table.duration' | trans }}</th>
                                        <th>{{ 'manager_dashboard.table.status' | trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for appointment in todayAppointments %}
                                        <tr>
                                            <td><strong>{{ appointment.date|date('H:i') }}</strong></td>
                                            <td>
                                                {{ appointment.client.firstName }} {{ appointment.client.lastName }}
                                                {% if appointment.client.phone %}
                                                    <br><small class="text-muted">
                                                        <i class="fas fa-phone"></i> {{ appointment.client.phone }}
                                                    </small>
                                                {% endif %}
                                            </td>
                                            <td>{{ appointment.barber.firstName }} {{ appointment.barber.lastName }}</td>
                                            <td>{{ appointment.procedureType.type }}</td>
                                            <td>{{ appointment.duration }} {{ 'manager_dashboard.minutes' | trans }}</td>
                                            <td>
                                                {% if appointment.statusValue == 'confirmed' %}
                                                    <span class="badge badge-success">{{ 'manager_dashboard.status.confirmed' | trans }}</span>
                                                {% elseif appointment.statusValue == 'completed' %}
                                                    <span class="badge badge-secondary">{{ 'manager_dashboard.status.completed' | trans }}</span>
                                                {% elseif appointment.statusValue == 'cancelled' %}
                                                    <span class="badge badge-danger">{{ 'manager_dashboard.status.cancelled' | trans }}</span>
                                                {% else %}
                                                    <span class="badge badge-warning">{{ appointment.statusValue }}</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
                <div class="card-footer">
                    <a href="{{ path('manager_appointments') }}" class="btn btn-primary">
                        <i class="fas fa-list"></i> {{ 'manager_dashboard.actions.view_all' | trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
