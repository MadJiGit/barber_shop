{% extends 'base.html.twig' %}

{% block title %}Manager - Всички резервации{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/manager_appointments.css') }}">
{% endblock %}

{% block body %}
<!--? Hero Start -->
<div class="slider-area2">
    <div class="slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 pt-70 text-center">
                        <h2>Управление на резервации</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1><i class="fas fa-calendar-alt"></i> Управление на резервации</h1>
            <p class="text-muted">Преглед и редакция на всички резервации</p>
        </div>
    </div>

    {# Navigation #}
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="{{ path('manager_dashboard') }}" class="btn btn-outline-primary">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a href="{{ path('manager_appointments') }}" class="btn btn-primary active">
                    <i class="fas fa-calendar-alt"></i> Всички резервации
                </a>
            </div>
        </div>
    </div>

    {# Filters #}
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-filter"></i> Филтри</h5>
                </div>
                <div class="card-body">
                    <form method="get" action="{{ path('manager_appointments') }}" class="form-inline">
                        <div class="form-group mr-3 mb-2">
                            <label for="date" class="mr-2">Дата:</label>
                            <input type="date"
                                   name="date"
                                   id="date"
                                   class="form-control"
                                   value="{{ filterDate }}">
                        </div>

                        <div class="form-group mr-3 mb-2">
                            <label for="barber" class="mr-2">Барбър:</label>
                            <select name="barber" id="barber" class="form-control">
                                <option value="">Всички</option>
                                {% for barber in allBarbers %}
                                    <option value="{{ barber.id }}"
                                            {% if filterBarberId == barber.id %}selected{% endif %}>
                                        {{ barber.firstName }} {{ barber.lastName }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group mr-3 mb-2">
                            <label for="status" class="mr-2">Статус:</label>
                            <select name="status" id="status" class="form-control">
                                <option value="">Всички</option>
                                <option value="confirmed" {% if filterStatus == 'confirmed' %}selected{% endif %}>Потвърдени</option>
                                <option value="completed" {% if filterStatus == 'completed' %}selected{% endif %}>Завършени</option>
                                <option value="cancelled" {% if filterStatus == 'cancelled' %}selected{% endif %}>Отменени</option>
                            </select>
                        </div>

                        <div class="form-group mr-3 mb-2">
                            <label for="client" class="mr-2">Клиент:</label>
                            <input type="text"
                                   name="client"
                                   id="client"
                                   class="form-control"
                                   placeholder="Име или email"
                                   value="{{ filterClientSearch }}">
                        </div>

                        <button type="submit" class="btn btn-primary mb-2 mr-2">
                            <i class="fas fa-search"></i> Търси
                        </button>
                        <a href="{{ path('manager_appointments') }}" class="btn btn-secondary mb-2">
                            <i class="fas fa-times"></i> Изчисти
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {# Column Visibility Toggle & Pagination Controls #}
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="columnToggle" data-toggle="dropdown">
                    <i class="fas fa-columns"></i> Колони
                </button>
                <div class="dropdown-menu p-3" onclick="event.stopPropagation()">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-id" data-column="id" checked>
                        <label class="form-check-label" for="col-id">ID</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-date" data-column="date" checked>
                        <label class="form-check-label" for="col-date">Дата и час</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-client" data-column="client" checked>
                        <label class="form-check-label" for="col-client">Клиент</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-phone" data-column="phone">
                        <label class="form-check-label" for="col-phone">Телефон</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-barber" data-column="barber" checked>
                        <label class="form-check-label" for="col-barber">Барбър</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-procedure" data-column="procedure" checked>
                        <label class="form-check-label" for="col-procedure">Услуга</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-duration" data-column="duration" checked>
                        <label class="form-check-label" for="col-duration">Време</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-status" data-column="status" checked>
                        <label class="form-check-label" for="col-status">Статус</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-date-added" data-column="date_added">
                        <label class="form-check-label" for="col-date-added">Дата създаване</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-date-updated" data-column="date_last_update">
                        <label class="form-check-label" for="col-date-updated">Дата промяна</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input column-toggle" id="col-actions" data-column="actions" checked>
                        <label class="form-check-label" for="col-actions">Действия</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 text-right">
            <span class="text-muted">
                Показани {{ (currentPage - 1) * perPage + 1 }}-{{ min(currentPage * perPage, totalAppointments) }} от {{ totalAppointments }}
            </span>
        </div>
    </div>

    {# Appointments Table #}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5><i class="fas fa-list"></i> Резервации</h5>
                    <div>
                        <label class="mb-0 mr-2">Покажи:</label>
                        <select class="form-control form-control-sm d-inline-block" style="width: auto;" onchange="changePerPage(this.value)">
                            <option value="10" {{ perPage == 10 ? 'selected' : '' }}>10</option>
                            <option value="20" {{ perPage == 20 ? 'selected' : '' }}>20</option>
                            <option value="50" {{ perPage == 50 ? 'selected' : '' }}>50</option>
                            <option value="100" {{ perPage == 100 ? 'selected' : '' }}>100</option>
                        </select>
                    </div>
                </div>
                <div class="card-body">
                    {% if appointments is empty %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Няма намерени резервации.
                        </div>
                    {% else %}
                        {% import 'manager/_table_macros.html.twig' as macros %}
                        {% set params = {
                            date: filterDate,
                            barber: filterBarberId,
                            status: filterStatus,
                            client: filterClientSearch,
                            perPage: perPage
                        }|filter(v => v is not null and v != '') %}

                        <div class="table-responsive">
                            <table class="table table-hover table-sm" id="appointmentsTable">
                                <thead>
                                    <tr>
                                        <th class="col-id" data-column="id">
                                            {{ macros.sortable_header('ID', 'id', sortBy, sortOrder, params) }}
                                        </th>
                                        <th class="col-date" data-column="date">
                                            {{ macros.sortable_header('Дата и час', 'date', sortBy, sortOrder, params) }}
                                        </th>
                                        <th class="col-client" data-column="client">Клиент</th>
                                        <th class="col-phone" data-column="phone">Телефон</th>
                                        <th class="col-barber" data-column="barber">Барбър</th>
                                        <th class="col-procedure" data-column="procedure">Услуга</th>
                                        <th class="col-duration" data-column="duration">Време</th>
                                        <th class="col-status" data-column="status">Статус</th>
                                        <th class="col-date_added" data-column="date_added">
                                            {{ macros.sortable_header('Създаден', 'date_added', sortBy, sortOrder, params) }}
                                        </th>
                                        <th class="col-date_last_update" data-column="date_last_update">
                                            {{ macros.sortable_header('Променен', 'date_last_update', sortBy, sortOrder, params) }}
                                        </th>
                                        <th class="col-actions" data-column="actions">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for appointment in appointments %}
                                        {% set isPast = appointment.date < date('now') %}
                                        <tr class="{{ isPast ? 'text-muted' : '' }}">
                                            <td class="col-id" data-column="id">{{ appointment.id }}</td>
                                            <td class="col-date" data-column="date">
                                                <strong>{{ appointment.date|date('d.m.Y') }}</strong>
                                                <br>
                                                <span class="badge badge-secondary">{{ appointment.date|date('H:i') }}</span>
                                            </td>
                                            <td class="col-client" data-column="client">
                                                <strong>{{ appointment.client.firstName }} {{ appointment.client.lastName }}</strong>
                                                <br>
                                                <small class="text-muted">{{ appointment.client.email }}</small>
                                            </td>
                                            <td class="col-phone" data-column="phone">
                                                {% if appointment.client.phone %}
                                                    <a href="tel:{{ appointment.client.phone }}" class="phone-link">
                                                        <i class="fas fa-phone"></i> {{ appointment.client.phone }}
                                                    </a>
                                                {% else %}
                                                    <span class="text-muted">—</span>
                                                {% endif %}
                                            </td>
                                            <td class="col-barber" data-column="barber">{{ appointment.barber.firstName }} {{ appointment.barber.lastName }}</td>
                                            <td class="col-procedure" data-column="procedure">{{ appointment.procedureType.type }}</td>
                                            <td class="col-duration" data-column="duration">{{ appointment.duration }} мин</td>
                                            <td class="col-status" data-column="status">
                                                {% if appointment.status == 'confirmed' %}
                                                    <span class="badge badge-success">Потвърден</span>
                                                {% elseif appointment.status == 'completed' %}
                                                    <span class="badge badge-secondary">Завършен</span>
                                                {% elseif appointment.status == 'cancelled' %}
                                                    <span class="badge badge-danger">Отменен</span>
                                                {% else %}
                                                    <span class="badge badge-warning">{{ appointment.status }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="col-date_added" data-column="date_added">
                                                <small>{{ appointment.dateAdded|date('d.m.Y H:i') }}</small>
                                            </td>
                                            <td class="col-date_last_update" data-column="date_last_update">
                                                <small>{{ appointment.dateLastUpdate ? appointment.dateLastUpdate|date('d.m.Y H:i') : '—' }}</small>
                                            </td>
                                            <td class="col-actions" data-column="actions">
                                                {% if appointment.status != 'cancelled' %}
                                                    <button type="button"
                                                            class="btn btn-sm btn-primary btn-edit"
                                                            data-appointment-id="{{ appointment.id }}"
                                                            title="Редактирай">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    {% if appointment.status == 'confirmed' %}
                                                        <button type="button"
                                                                class="btn btn-sm btn-danger btn-cancel"
                                                                data-appointment-id="{{ appointment.id }}"
                                                                title="Отмени">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="text-muted">—</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        {# Pagination #}
                        {% if totalPages > 1 %}
                            <nav aria-label="Page navigation" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    {# Previous Button #}
                                    <li class="page-item {{ currentPage == 1 ? 'disabled' : '' }}">
                                        <a class="page-link" href="?{{ params|merge({page: currentPage - 1, perPage: perPage})|url_encode }}">
                                            <i class="fas fa-chevron-left"></i> Предишна
                                        </a>
                                    </li>

                                    {# Page Numbers #}
                                    {% set startPage = max(1, currentPage - 2) %}
                                    {% set endPage = min(totalPages, currentPage + 2) %}

                                    {% if startPage > 1 %}
                                        <li class="page-item">
                                            <a class="page-link" href="?{{ params|merge({page: 1, perPage: perPage})|url_encode }}">1</a>
                                        </li>
                                        {% if startPage > 2 %}
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        {% endif %}
                                    {% endif %}

                                    {% for page in startPage..endPage %}
                                        <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                                            <a class="page-link" href="?{{ params|merge({page: page, perPage: perPage})|url_encode }}">{{ page }}</a>
                                        </li>
                                    {% endfor %}

                                    {% if endPage < totalPages %}
                                        {% if endPage < totalPages - 1 %}
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        {% endif %}
                                        <li class="page-item">
                                            <a class="page-link" href="?{{ params|merge({page: totalPages, perPage: perPage})|url_encode }}">{{ totalPages }}</a>
                                        </li>
                                    {% endif %}

                                    {# Next Button #}
                                    <li class="page-item {{ currentPage == totalPages ? 'disabled' : '' }}">
                                        <a class="page-link" href="?{{ params|merge({page: currentPage + 1, perPage: perPage})|url_encode }}">
                                            Следваща <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{# Edit Appointment Modal #}
<div class="modal fade" id="editAppointmentModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Редактиране на резервация</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editAppointmentForm" data-validate>
                    <input type="hidden" id="edit_appointment_id">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="edit_client">Клиент:</label>
                                <input type="text" class="form-control" id="edit_client" readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="edit_barber">Барбър: *</label>
                                <select class="form-control" id="edit_barber" required>
                                    <option value="">Избери барбър</option>
                                    {% for barber in allBarbers %}
                                        <option value="{{ barber.id }}">{{ barber.firstName }} {{ barber.lastName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="edit_date">Дата: *</label>
                                <input type="date" class="form-control" id="edit_date" required min="{{ 'now'|date('Y-m-d') }}" data-future-only>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="edit_time">Час: *</label>
                                <input type="time" class="form-control" id="edit_time" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="edit_procedure">Процедура: *</label>
                                <select class="form-control" id="edit_procedure" required>
                                    <option value="">Избери процедура</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="edit_status">Статус:</label>
                                <select class="form-control" id="edit_status">
                                    <option value="confirmed">Потвърден</option>
                                    <option value="completed">Завършен</option>
                                    <option value="cancelled">Отменен</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="edit_notes">Бележки:</label>
                        <textarea class="form-control" id="edit_notes" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отказ</button>
                <button type="button" class="btn btn-primary" id="saveAppointmentBtn">
                    <i class="fas fa-save"></i> Запази промените
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/manager_appointments.js') }}"></script>
{% endblock %}
