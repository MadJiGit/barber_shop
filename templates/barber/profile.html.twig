{% extends 'base.html.twig' %}

{% block title %}{{ 'barber.edit.title' | trans }}{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>{{ 'barber.edit.hero' | trans }}</h2>
                        </div>
                    </div>а
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? User Profile Section Start -->
    <section class="user-profile-section section-padding30">
        <div class="container">
            {% if user.isBarber %}
                <!-- Barber Tabs Navigation -->
                <ul class="nav nav-tabs mb-4" id="barberTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="calendar-tab" data-toggle="tab" href="#calendar" role="tab">
                            <i class="fas fa-calendar-alt"></i> {{ 'barber.tabs.calendar' | trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="appointments-tab" data-toggle="tab" href="#appointments" role="tab">
                            <i class="fas fa-clock"></i> {{ 'barber.tabs.appointments' | trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="procedures-tab" data-toggle="tab" href="#procedures" role="tab">
                            <i class="fas fa-cut"></i> {{ 'barber.tabs.procedures' | trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="history-tab" data-toggle="tab" href="#history" role="tab">
                            <i class="fas fa-history"></i> {{ 'barber.tabs.history' | trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab">
                            <i class="fas fa-user"></i> {{ 'barber.tabs.profile' | trans }}
                        </a>
                    </li>
                </ul>

                <!-- Tab Content for Barber -->
                <div class="tab-content" id="barberTabsContent">
                    <!-- Calendar Tab -->
                    <div class="tab-pane fade show active" id="calendar" role="tabpanel">
                        {% if calendar is defined and calendar is not empty %}
                            <div class="container-fluid py-4">
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <a href="{{ path('profile_edit', {id: user.id}) }}?tab=calendar&year={{ prevYear }}&month={{ prevMonth }}" class="btn btn-outline-secondary">
                                                <i class="fas fa-chevron-left"></i> {{ 'barber.calendar.prev' | trans }}
                                            </a>
                                            <h2 class="mb-0"><i class="fas fa-calendar-alt"></i> {{ monthName }} {{ year }}</h2>
                                            <a href="{{ path('profile_edit', {id: user.id}) }}?tab=calendar&year={{ nextYear }}&month={{ nextMonth }}" class="btn btn-outline-secondary">
                                                {{ 'barber.calendar.next' | trans }} <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-12">
                                        <div class="calendar-legend d-flex justify-content-center gap-3">
                                            <span class="legend-item"><span class="legend-box legend-available"></span> {{ 'barber.calendar.legend.available' | trans }}</span>
                                            <span class="legend-item"><span class="legend-box legend-partial"></span> {{ 'barber.calendar.legend.partial' | trans }}</span>
                                            <span class="legend-item"><span class="legend-box legend-full"></span> {{ 'barber.calendar.legend.full' | trans }}</span>
                                            <span class="legend-item"><span class="legend-box legend-unavailable"></span> {{ 'barber.calendar.legend.unavailable' | trans }}</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="calendar-grid">
                                    <div class="calendar-header">
                                        {% for dayName in ['mon', 'tue', 'wed', 'thu', 'fri', 'sat', 'sun'] %}
                                            <div class="calendar-day-name">{{ ('barber.calendar.weekdays.' ~ dayName) | trans }}</div>
                                        {% endfor %}
                                    </div>
                                    <div class="calendar-body">
                                        {% set firstDayOfWeek = calendar[0].dayOfWeek %}
                                        {% set offset = firstDayOfWeek == 0 ? 6 : firstDayOfWeek - 1 %}
                                        {% if offset > 0 %}{% for i in 1..offset %}<div class="calendar-cell empty"></div>{% endfor %}{% endif %}
                                        {% for day in calendar %}
                                            <div class="calendar-cell calendar-day status-{{ day.status }}" onclick="openDayModal('{{ day.date }}')">
                                                <div class="day-number">{{ day.date|date('d') }}</div>
                                                {% if day.working %}
                                                    <div class="day-info"><small>{{ day.startTime }}-{{ day.endTime }}</small></div>
                                                    {% if day.occupiedSlots > 0 %}<div class="day-occupied"><i class="fas fa-user"></i> {{ day.occupiedSlots }}/{{ day.totalSlots }}</div>{% endif %}
                                                {% else %}
                                                    <div class="day-info"><small class="text-muted">{{ 'barber.calendar.day_off' | trans }}</small></div>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Appointments Tab -->
                    <div class="tab-pane fade" id="appointments" role="tabpanel">
                        <div class="row justify-content-center">
                            <div class="col-xl-12">
                                <h3 class="mb-4"><i class="fas fa-clock"></i> {{ 'barber.appointments.title' | trans }}</h3>
                                {% if barberAppointments is defined %}
                                    {% include 'shared/_appointment_table.html.twig' %}
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Procedures Tab -->
                    <div class="tab-pane fade" id="procedures" role="tabpanel">
                        <div class="row justify-content-center">
                            <div class="col-xl-10">
                                <h3 class="mb-4"><i class="fas fa-cut"></i> {{ 'barber.procedures.title' | trans }}</h3>
                                <div class="card shadow-sm border-0 mt-4">
                                    <div class="card-body p-4">
                                        <form method="post" action="{{ path('barber_procedures_save') }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('barber_procedures') }}">
                                            <div class="row">
                                                {% for procedure in allProcedures %}
                                                    <div class="col-md-6 mb-3">
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" id="procedure_{{ procedure.id }}" name="procedures[]" value="{{ procedure.id }}" {% if procedure.id in barberProcedureIds %}checked{% endif %}>
                                                            <label class="custom-control-label" for="procedure_{{ procedure.id }}">
                                                                <strong>{{ procedure.type }}</strong><br>
                                                                <small class="text-muted">
                                                                    {% if user.isBarberJunior %}
                                                                        {{ 'barber.procedures.price' | trans }}: {{ procedure.priceJunior }} | {{ 'barber.procedures.duration' | trans }}: {{ procedure.durationJunior }} мин.
                                                                    {% else %}
                                                                        {{ 'barber.procedures.price' | trans }}: {{ procedure.priceMaster }} | {{ 'barber.procedures.duration' | trans }}: {{ procedure.durationMaster }} мин.
                                                                    {% endif %}
                                                                </small>
                                                            </label>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                            <button type="submit" class="btn btn-primary mt-3">{{ 'barber.procedures.actions.save' | trans }}</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- History Tab -->
                    <div class="tab-pane fade" id="history" role="tabpanel">
                        <div class="row justify-content-center">
                            <div class="col-xl-10">
                                <h3 class="mb-4"><i class="fas fa-history"></i> {{ 'barber.history.title' | trans }}</h3>
                                <p class="text-center py-4 text-muted">{{ 'barber.history.empty' | trans }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Profile Tab -->
                    <div class="tab-pane fade show active" id="profile" role="tabpanel">
                        <div class="row justify-content-center">
                            <div class="col-xl-8 col-lg-10">
                                <div class="card user-profile-card shadow-sm border-0">
                                    <div class="card-header bg-white border-bottom py-3">
                                        <h4 class="mb-0 text-center"><i class="fas fa-user-edit"></i> {{ user.nickName ?: user.email }}</h4>
                                    </div>
                                    <div class="card-body p-4">

                                        {% for label, messages in app.flashes %}
                                            {% for message in messages %}
                                                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                                                    {{ message }}
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                            {% endfor %}
                                        {% endfor %}

                                        {{ form_start(form, {'attr': {'class': 'user-profile-form', 'novalidate': 'novalidate', 'id': 'profileForm'}}) }}
                                            <input type="hidden" name="tab" value="profile">

                                        <div class="row">
                                            <div class="col-md-12 form-group">
                                                <label>Email</label>
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.email) }}
                                            </div>
                                            <div class="col-md-12 form-group">
                                                <label class="text-muted"><i class="fas fa-calendar-plus mr-2"></i>{{ 'profile.form.member_since' | trans }}</label>
                                                <input type="text" class="form-control" readonly value="{{ user.dateAdded|date('d.m.Y H:i') }}">
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>{{ 'profile.form.first_name' | trans }}</label>
                                                {{ form_widget(form.first_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>{{ 'profile.form.last_name' | trans }}</label>
                                                {{ form_widget(form.last_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            </div>
                                            <div class="col-md-12 form-group">
                                                <label>{{ 'profile.form.phone' | trans }}</label>
                                                {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.phone) }}
                                            </div>
                                        </div>

                                        <hr class="my-4">
                                        <h5 class="mb-3"><i class="fas fa-key text-warning mr-2"></i>{{ 'profile.password.title' | trans }}</h5>
                                        <div class="row">
                                            <div class="col-md-12 form-group">
                                                <label>{{ 'profile.password.current' | trans }}</label>
                                                <div class="password-field-wrapper">
                                                    {{ form_widget(form.current_password, {'attr': {'class': 'form-control password-field'}}) }}
                                                    <i class="fas fa-eye password-toggle-icon" data-target="current_password"></i>
                                                </div>
                                                {{ form_errors(form.current_password) }}
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>{{ 'profile.password.new' | trans }}</label>
                                                <div class="password-field-wrapper">
                                                    {{ form_widget(form.new_password, {'attr': {'class': 'form-control password-field'}}) }}
                                                    <i class="fas fa-eye password-toggle-icon" data-target="new_password"></i>
                                                </div>
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>{{ 'profile.password.repeat' | trans }}</label>
                                                <div class="password-field-wrapper">
                                                    {{ form_widget(form.new_password_repeat, {'attr': {'class': 'form-control password-field'}}) }}
                                                    <i class="fas fa-eye password-toggle-icon" data-target="new_password_repeat"></i>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Action Buttons -->
                                        <div class="text-center mt-4">
                                            <a href="{{ path('main') }}" class="btn btn-outline-secondary btn-lg px-5 mr-2" id="backButton">
                                                <i class="fas fa-arrow-left"></i> {{ 'profile.actions.back' | trans }}
                                            </a>
                                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg px-5'}, 'label': 'profile.actions.save'|trans}) }}
                                        </div>

                                        {# ИЗОЛИРАНЕ НА ПРОБЛЕМНИТЕ ПОЛЕТА #}
                                        {% do form.date_added.setRendered %}
                                        {% if form.roles is defined %}{% do form.roles.setRendered %}{% endif %}
                                        {% if form.date_last_update is defined %}{% do form.date_last_update.setRendered %}{% endif %}
                                        {% if form.date_banned is defined %}{% do form.date_banned.setRendered %}{% endif %}
                                        {% if form.token_expires_at is defined %}{% do form.token_expires_at.setRendered %}{% endif %}
                                        {# Маркираме останалите полета като изобразени, за да не се рендерират като hidden #}
                                        {% do form.password.setRendered %}
                                        {% do form.nick_name.setRendered %}

                                        {# form_rest рендерира само CSRF token, без останалите полета #}
                                        {{ form_rest(form) }}
                                        {{ form_end(form, {'render_rest': false}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>

    {% if user.isBarber %}
        <!-- Day Schedule Modal -->
        <div class="modal fade" id="dayScheduleModal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-calendar-day"></i> <span id="modalDate"></span></h5>
                        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div id="modalLoading" class="text-center py-5"><i class="fas fa-spinner fa-spin fa-3x"></i></div>
                        <div id="modalContent">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="workingCheckbox" checked>
                                    <label class="custom-control-label" for="workingCheckbox"><strong>{{ 'barber.schedule.working_day' | trans }}</strong></label>
                                </div>
                            </div>
                            <div id="workingHoursSection">
                                <div class="row mb-3">
                                    <div class="col-md-6"><label>{{ 'barber.schedule.start' | trans }}:</label><input type="time" class="form-control" id="startTime" value="09:00"></div>
                                    <div class="col-md-6"><label>{{ 'barber.schedule.end' | trans }}:</label><input type="time" class="form-control" id="endTime" value="18:00"></div>
                                </div>
                                <div id="timeSlotsContainer" class="time-slots-grid"></div>
                                <div class="form-group mt-3">
                                    <label>{{ 'barber.schedule.reason' | trans }}:</label>
                                    <input type="text" class="form-control" id="scheduleReason" placeholder="{{ 'barber.schedule.reason_placeholder' | trans }}">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'barber.schedule.actions.cancel' | trans }}</button>
                        <button type="button" class="btn btn-primary" onclick="saveSchedule()"><i class="fas fa-save"></i> {{ 'barber.schedule.actions.save' | trans }}</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/client_profile.css') }}">
    {% if user.isBarber %}
        <link rel="stylesheet" href="{{ asset('css/barber_appointments.css') }}">
        <link rel="stylesheet" href="{{ asset('css/barber_calendar.css') }}">
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/client_profile.js') }}"></script>
    {% if user.isBarber %}
        <script src="{{ asset('js/barber_calendar.js') }}"></script>
        <script src="{{ asset('js/barber_profile.js') }}"></script>
    {% endif %}
{% endblock %}