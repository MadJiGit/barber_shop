{% extends 'base.html.twig' %}

{% block title %}Редактиране на профил - Barber Shop{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>Моят профил</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? User Profile Section Start -->
    <section class="user-profile-section section-padding30">
        <div class="container">
            {% if user.isBarber %}
                <!-- Barber Tabs Navigation -->
                <ul class="nav nav-tabs mb-4" id="barberTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="calendar-tab" data-toggle="tab" href="#calendar" role="tab">
                            <i class="fas fa-calendar-alt"></i> График
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="appointments-tab" data-toggle="tab" href="#appointments" role="tab">
                            <i class="fas fa-clock"></i> Записани часове
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="procedures-tab" data-toggle="tab" href="#procedures" role="tab">
                            <i class="fas fa-cut"></i> Услуги
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="history-tab" data-toggle="tab" href="#history" role="tab">
                            <i class="fas fa-history"></i> История
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab">
                            <i class="fas fa-user"></i> Моят профил
                        </a>
                    </li>
                </ul>

                <!-- Tab Content for Barber -->
                <div class="tab-content" id="barberTabsContent">
                    <!-- Calendar Tab (Default for barbers) -->
                    <div class="tab-pane fade show active" id="calendar" role="tabpanel">
                        {% if calendar is not empty %}
                            <div class="container-fluid py-4">
                                <!-- Calendar Header -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <a href="{{ path('profile_edit', {id: user.id}) }}?tab=calendar&year={{ prevYear }}&month={{ prevMonth }}"
                                               class="btn btn-outline-secondary">
                                                <i class="fas fa-chevron-left"></i> Предишен
                                            </a>
                                            <h2 class="mb-0">
                                                <i class="fas fa-calendar-alt"></i> {{ monthName }} {{ year }}
                                            </h2>
                                            <a href="{{ path('profile_edit', {id: user.id}) }}?tab=calendar&year={{ nextYear }}&month={{ nextMonth }}"
                                               class="btn btn-outline-secondary">
                                                Следващ <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <!-- Legend -->
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <div class="calendar-legend d-flex justify-content-center gap-3">
                                            <span class="legend-item">
                                                <span class="legend-box legend-available"></span> Свободен
                                            </span>
                                            <span class="legend-item">
                                                <span class="legend-box legend-partial"></span> Частично зает
                                            </span>
                                            <span class="legend-item">
                                                <span class="legend-box legend-full"></span> Напълно зает
                                            </span>
                                            <span class="legend-item">
                                                <span class="legend-box legend-unavailable"></span> Не работя
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Calendar Grid -->
                                <div class="row">
                                    <div class="col-12">
                                        <div class="calendar-grid">
                                            <!-- Weekday headers -->
                                            <div class="calendar-header">
                                                <div class="calendar-day-name">Пон</div>
                                                <div class="calendar-day-name">Вто</div>
                                                <div class="calendar-day-name">Сря</div>
                                                <div class="calendar-day-name">Чет</div>
                                                <div class="calendar-day-name">Пет</div>
                                                <div class="calendar-day-name">Съб</div>
                                                <div class="calendar-day-name">Нед</div>
                                            </div>

                                            <!-- Calendar days -->
                                            <div class="calendar-body">
                                                {% set firstDayOfWeek = calendar[0].dayOfWeek %}
                                                {% set offset = firstDayOfWeek == 0 ? 6 : firstDayOfWeek - 1 %}

                                                {# Empty cells before first day #}
                                                {% if offset > 0 %}
                                                    {% for i in 1..offset %}
                                                        <div class="calendar-cell empty"></div>
                                                    {% endfor %}
                                                {% endif %}

                                                {# Actual calendar days #}
                                                {% for day in calendar %}
                                                    {% set dateObj = day.date|date('Y-m-d') %}
                                                    {% set dayNum = day.date|date('d') %}

                                                    <div class="calendar-cell calendar-day status-{{ day.status }}"
                                                         data-date="{{ day.date }}"
                                                         data-working="{{ day.working ? 'true' : 'false' }}"
                                                         onclick="openDayModal('{{ day.date }}')">
                                                        <div class="day-number">{{ dayNum|number_format(0, '', '') }}</div>

                                                        {% if day.working %}
                                                            <div class="day-info">
                                                                <small>{{ day.startTime }} - {{ day.endTime }}</small>
                                                            </div>
                                                            {% if day.occupiedSlots > 0 %}
                                                                <div class="day-occupied">
                                                                    <i class="fas fa-user"></i> {{ day.occupiedSlots }}/{{ day.totalSlots }}
                                                                </div>
                                                            {% endif %}
                                                        {% else %}
                                                            <div class="day-info">
                                                                <small class="text-muted">Почивен</small>
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <!-- End Calendar Tab -->

                    <!-- Appointments Tab -->
                    <div class="tab-pane fade" id="appointments" role="tabpanel">
                        <div class="row justify-content-center">
                            <div class="col-xl-12">
                                <h3 class="mb-4"><i class="fas fa-clock"></i> Записани часове</h3>

                                <!-- Filters -->
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <form method="GET" action="{{ path('profile_edit', {id: user.id}) }}" id="appointmentsFilterForm">
                                            <input type="hidden" name="tab" value="appointments">

                                            <div class="row">
                                                <!-- Date From -->
                                                <div class="col-md-3">
                                                    <label for="date_from">От дата:</label>
                                                    <input type="date"
                                                           class="form-control"
                                                           id="date_from"
                                                           name="date_from"
                                                           value="{{ filters.date_from }}">
                                                </div>

                                                <!-- Date To -->
                                                <div class="col-md-3">
                                                    <label for="date_to">До дата:</label>
                                                    <input type="date"
                                                           class="form-control"
                                                           id="date_to"
                                                           name="date_to"
                                                           value="{{ filters.date_to }}">
                                                </div>

                                                <!-- Status Filter -->
                                                <div class="col-md-3">
                                                    <label>Статус:</label>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name="statuses[]" value="pending" id="status_pending" {{ 'pending' in filters.statuses ? 'checked' : '' }}>
                                                        <label class="form-check-label" for="status_pending">Чакащи</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name="statuses[]" value="confirmed" id="status_confirmed" {{ 'confirmed' in filters.statuses ? 'checked' : '' }}>
                                                        <label class="form-check-label" for="status_confirmed">Потвърдени</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name="statuses[]" value="completed" id="status_completed" {{ 'completed' in filters.statuses ? 'checked' : '' }}>
                                                        <label class="form-check-label" for="status_completed">Завършени</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name="statuses[]" value="cancelled" id="status_cancelled" {{ 'cancelled' in filters.statuses ? 'checked' : '' }}>
                                                        <label class="form-check-label" for="status_cancelled">Отменени</label>
                                                    </div>
                                                </div>

                                                <!-- Search -->
                                                <div class="col-md-3">
                                                    <label for="search">Търси клиент:</label>
                                                    <input type="text"
                                                           class="form-control"
                                                           id="search"
                                                           name="search"
                                                           placeholder="Име, имейл, телефон..."
                                                           value="{{ filters.search }}">
                                                </div>
                                            </div>

                                            <div class="row mt-3">
                                                <div class="col-md-12">
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fas fa-filter"></i> Филтрирай
                                                    </button>
                                                    <a href="{{ path('profile_edit', {id: user.id, tab: 'appointments'}) }}" class="btn btn-secondary ml-2">
                                                        <i class="fas fa-undo"></i> Изчисти
                                                    </a>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <!-- Results count and items per page -->
                                {% if appointmentsPagination %}
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <p class="text-muted mb-0">
                                            Показани {{ barberAppointments|length }} от {{ appointmentsPagination.total }} записа
                                        </p>
                                        <form method="GET" action="{{ path('profile_edit', {id: user.id}) }}" class="form-inline">
                                            <input type="hidden" name="tab" value="appointments">
                                            <input type="hidden" name="date_from" value="{{ filters.date_from }}">
                                            <input type="hidden" name="date_to" value="{{ filters.date_to }}">
                                            {% for status in filters.statuses %}
                                                <input type="hidden" name="statuses[]" value="{{ status }}">
                                            {% endfor %}
                                            <input type="hidden" name="search" value="{{ filters.search }}">
                                            <input type="hidden" name="page" value="{{ appointmentsPagination.page }}">

                                            <label class="mr-2 mb-0">Показвай:</label>
                                            <select name="limit" class="form-control form-control-sm" onchange="this.form.submit()">
                                                <option value="10" {{ filters.limit == 10 ? 'selected' : '' }}>10</option>
                                                <option value="20" {{ filters.limit == 20 ? 'selected' : '' }}>20</option>
                                                <option value="50" {{ filters.limit == 50 ? 'selected' : '' }}>50</option>
                                            </select>
                                        </form>
                                    </div>
                                {% endif %}

                                <!-- Appointments Table -->
                                {% include 'shared/_appointment_table.html.twig' %}

                                <!-- Pagination -->
                                {% if appointmentsPagination and appointmentsPagination.totalPages > 1 %}
                                    <nav aria-label="Appointments pagination" class="mt-4">
                                        <ul class="pagination justify-content-center">
                                            <!-- Previous -->
                                            {% if appointmentsPagination.page > 1 %}
                                                <li class="page-item">
                                                    <a class="page-link" href="{{ path('profile_edit', {id: user.id, tab: 'appointments', page: appointmentsPagination.page - 1, date_from: filters.date_from, date_to: filters.date_to, statuses: filters.statuses, search: filters.search, limit: filters.limit}) }}">
                                                        <i class="fas fa-chevron-left"></i>
                                                    </a>
                                                </li>
                                            {% endif %}

                                            <!-- Page numbers -->
                                            {% for i in 1..appointmentsPagination.totalPages %}
                                                {% if i == appointmentsPagination.page %}
                                                    <li class="page-item active">
                                                        <span class="page-link">{{ i }}</span>
                                                    </li>
                                                {% elseif i == 1 or i == appointmentsPagination.totalPages or (i >= appointmentsPagination.page - 2 and i <= appointmentsPagination.page + 2) %}
                                                    <li class="page-item">
                                                        <a class="page-link" href="{{ path('profile_edit', {id: user.id, tab: 'appointments', page: i, date_from: filters.date_from, date_to: filters.date_to, statuses: filters.statuses, search: filters.search, limit: filters.limit}) }}">
                                                            {{ i }}
                                                        </a>
                                                    </li>
                                                {% elseif i == appointmentsPagination.page - 3 or i == appointmentsPagination.page + 3 %}
                                                    <li class="page-item disabled">
                                                        <span class="page-link">...</span>
                                                    </li>
                                                {% endif %}
                                            {% endfor %}

                                            <!-- Next -->
                                            {% if appointmentsPagination.page < appointmentsPagination.totalPages %}
                                                <li class="page-item">
                                                    <a class="page-link" href="{{ path('profile_edit', {id: user.id, tab: 'appointments', page: appointmentsPagination.page + 1, date_from: filters.date_from, date_to: filters.date_to, statuses: filters.statuses, search: filters.search, limit: filters.limit}) }}">
                                                        <i class="fas fa-chevron-right"></i>
                                                    </a>
                                                </li>
                                            {% endif %}
                                        </ul>
                                    </nav>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <!-- End Appointments Tab -->

                    <!-- Procedures Tab -->
                    <div class="tab-pane fade" id="procedures" role="tabpanel">
                        <div class="row justify-content-center">
                            <div class="col-xl-10">
                                <h3 class="mb-4"><i class="fas fa-cut"></i> Услуги, които извършвам</h3>
                                <p class="text-muted">Изберете услугите, които можете да извършвате. Клиентите ще виждат само вас, когато изберат тази услуга.</p>

                                <div class="card shadow-sm border-0 mt-4">
                                    <div class="card-body p-4">
                                        <form method="post" action="{{ path('barber_procedures_save') }}" id="proceduresForm">
                                            <input type="hidden" name="_token" value="{{ csrf_token('barber_procedures') }}">

                                            <div class="row">
                                                {% for procedure in allProcedures %}
                                                    <div class="col-md-6 mb-3">
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox"
                                                                   class="custom-control-input"
                                                                   id="procedure_{{ procedure.id }}"
                                                                   name="procedures[]"
                                                                   value="{{ procedure.id }}"
                                                                   {% if procedure.id in barberProcedureIds %}checked{% endif %}>
                                                            <label class="custom-control-label" for="procedure_{{ procedure.id }}">
                                                                <strong>{{ procedure.type }}</strong>
                                                                <br>
                                                                <small class="text-muted">
                                                                    {% if user.isBarberJunior %}
                                                                        Цена: {{ procedure.priceJunior }} лв | Време: {{ procedure.durationJunior }} мин
                                                                    {% else %}
                                                                        Цена: {{ procedure.priceMaster }} лв | Време: {{ procedure.durationMaster }} мин
                                                                    {% endif %}
                                                                </small>
                                                            </label>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>

                                            <div class="text-center mt-4">
                                                <button type="submit" class="btn btn-primary btn-lg">
                                                    <i class="fas fa-save"></i> Запази промените
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Procedures Tab -->

                    <!-- History Tab -->
                    <div class="tab-pane fade" id="history" role="tabpanel">
                        <div class="row justify-content-center">
                            <div class="col-xl-10">
                                <h3 class="mb-4"><i class="fas fa-history"></i> История на посещения</h3>

                                <!-- Appointments History Section -->
                                <div class="card shadow-sm border-0">
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-hover mb-0">
                                                <thead style="background-color: #f8f9fa;">
                                                    <tr>
                                                        <th>Дата</th>
                                                        <th>Час</th>
                                                        <th>Бръснар</th>
                                                        <th>Услуга</th>
                                                        <th>Статус</th>
                                                        <th class="text-right">Цена</th>
                                                        <th class="text-center">Действия</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% set historyAppointments = barberAppointments|filter(a => a.status in ['completed', 'cancelled', 'no_show']) %}
                                                    {% if historyAppointments is empty %}
                                                        <tr>
                                                            <td colspan="7" class="text-center py-4 text-muted">
                                                                <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                                                <p class="mb-0">Няма история на посещения.</p>
                                                            </td>
                                                        </tr>
                                                    {% else %}
                                                        {% for appointment in historyAppointments %}
                                                            {% set appointmentDateTime = appointment.date %}
                                                            {% set now = "now"|date('U') %}
                                                            {% set appointmentTimestamp = appointmentDateTime|date('U') %}
                                                            {% set isFuture = appointmentTimestamp > now %}

                                                            <tr>
                                                                <td>{{ appointment.date|date('d.m.Y') }}</td>
                                                                <td>{{ appointment.date|date('H:i') }}</td>
                                                                <td>
                                                                    {{ appointment.barber.barberTitleBg }} {{ appointment.barber.firstName }}
                                                                </td>
                                                                <td>{{ appointment.procedureType.type }}</td>
                                                                <td>
                                                                    {% if appointment.status == 'confirmed' %}
                                                                        <span class="badge badge-primary">Потвърден</span>
                                                                    {% elseif appointment.status == 'completed' %}
                                                                        <span class="badge badge-success">Изпълнен</span>
                                                                    {% elseif appointment.status == 'cancelled' %}
                                                                        <span class="badge badge-danger">Отменен</span>
                                                                    {% elseif appointment.status == 'no_show' %}
                                                                        <span class="badge badge-warning">Недошъл</span>
                                                                    {% else %}
                                                                        <span class="badge badge-secondary">{{ appointment.status }}</span>
                                                                    {% endif %}
                                                                </td>
                                                                <td class="text-right">
                                                                    {% if appointment.barber.isBarberJunior %}
                                                                        {{ appointment.procedureType.priceJunior }} лв
                                                                    {% else %}
                                                                        {{ appointment.procedureType.priceMaster }} лв
                                                                    {% endif %}
                                                                </td>
                                                                <td class="text-center" style="white-space: nowrap;">
                                                                    <span class="text-muted">—</span>
                                                                </td>
                                                            </tr>
                                                        {% endfor %}
                                                    {% endif %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End History Tab -->

                    <!-- Profile Tab -->
                    <div class="tab-pane fade" id="profile" role="tabpanel">
            {% endif %}

            <div class="row justify-content-center">
                <div class="col-xl-8 col-lg-10">
                    <!-- User Info Card -->
                    <div class="card user-profile-card shadow-sm border-0">
                        <div class="card-header bg-white border-bottom py-3">
                            <h4 class="mb-0 text-center" style="color: #d4a574;">
                                <i class="fas fa-user-edit"></i>
                                {% if user.nickName %}
                                    {{ user.nickName }}
                                {% else %}
                                    {{ user.email }}
                                {% endif %}
                            </h4>
                        </div>
                        <div class="card-body p-4">
                            {{ form_start(form, {'attr': {'class': 'user-profile-form', 'novalidate': 'novalidate', 'id': 'profileForm'}}) }}
                            {{ form_row(form._token) }}

                            <div class="row">
                                <!-- Email -->
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            <i class="fas fa-envelope text-muted mr-2"></i>Email
                                        </label>
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'example@email.com'}}) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>

                                <!-- First Name -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            <i class="fas fa-user text-muted mr-2"></i>Име
                                        </label>
                                        {{ form_widget(form.first_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                        {{ form_errors(form.first_name) }}
                                    </div>
                                </div>

                                <!-- Last Name -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            <i class="fas fa-user text-muted mr-2"></i>Фамилия
                                        </label>
                                        {{ form_widget(form.last_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                        {{ form_errors(form.last_name) }}
                                    </div>
                                </div>

                                <!-- Nickname -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.nick_name) }}
                                        {{ form_widget(form.nick_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                        {{ form_errors(form.nick_name) }}
                                        <small class="form-text text-muted">По желание. Ако е празно ще използваме вашето име.</small>
                                    </div>
                                </div>

                                <!-- Phone -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            <i class="fas fa-phone text-muted mr-2"></i>Телефон
                                        </label>
                                        {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                        {{ form_errors(form.phone) }}
                                    </div>
                                </div>

                                <!-- Date Added (readonly) -->
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="text-muted">
                                            <i class="fas fa-calendar-plus mr-2"></i>Член от
                                        </label>
                                        {{ form_widget(form.date_added, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                                    </div>
                                </div>
                            </div>

                            <!-- Password Change Section -->
                            <hr class="my-4">
                            <h5 class="mb-3">
                                <i class="fas fa-key text-warning mr-2"></i>Промяна на парола
                            </h5>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle mr-2"></i>
                                <strong>Важно:</strong> При попълване на полетата за парола, ще получите имейл с линк за потвърждение. Паролата ще бъде сменена след потвърждение.
                            </div>

                            <div class="row">
                                <!-- Current Password -->
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            <i class="fas fa-lock text-muted mr-2"></i>Текуща парола
                                        </label>
                                        {{ form_widget(form.current_password, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                        {{ form_errors(form.current_password) }}
                                    </div>
                                </div>

                                <!-- New Password -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            <i class="fas fa-lock text-muted mr-2"></i>Нова парола
                                        </label>
                                        {{ form_widget(form.new_password, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                        {{ form_errors(form.new_password) }}
                                        <small class="form-text text-muted">Минимум 6 символа</small>
                                    </div>
                                </div>

                                <!-- Repeat New Password -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            <i class="fas fa-lock text-muted mr-2"></i>Повтори новата парола
                                        </label>
                                        {{ form_widget(form.new_password_repeat, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                        {{ form_errors(form.new_password_repeat) }}
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="text-center mt-4">
                                <a href="{{ path('main') }}" class="btn btn-outline-secondary btn-lg mr-2" id="backButton">
                                    <i class="fas fa-arrow-left"></i> Обратно към начало
                                </a>
                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg px-5'}, 'label': 'Запази промените'}) }}
                            </div>

                            {{ form_end(form, {'render_rest': false}) }}
                        </div>
                    </div>

                </div>
            </div>

            {% if user.isBarber %}
                    </div>
                    <!-- End Profile Tab -->
                </div>
                <!-- End Tab Content -->
            {% endif %}
        </div>
    </section>
    <!-- User Profile Section End -->

    {% if user.isBarber %}
        <!-- Day Schedule Modal -->
        <div class="modal fade" id="dayScheduleModal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-calendar-day"></i>
                            <span id="modalDate"></span> - <span id="modalDayName"></span>
                        </h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span>&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="modalLoading" class="text-center py-5">
                            <i class="fas fa-spinner fa-spin fa-3x"></i>
                            <p class="mt-3">Зареждане...</p>
                        </div>

                        <div id="modalContent" style="display: none;">
                            <!-- Working checkbox -->
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="workingCheckbox" checked>
                                    <label class="custom-control-label" for="workingCheckbox">
                                        <strong>Работя този ден</strong>
                                    </label>
                                </div>
                            </div>

                            <div id="workingHoursSection">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label>Начало:</label>
                                        <input type="time" class="form-control" id="startTime" value="09:00">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Край:</label>
                                        <input type="time" class="form-control" id="endTime" value="18:00">
                                    </div>
                                </div>

                                <!-- Time slots -->
                                <div class="mb-3">
                                    <label><strong>Часове:</strong></label>
                                    <div id="timeSlotsContainer" class="time-slots-grid">
                                        <!-- Will be populated by JS -->
                                    </div>
                                </div>

                                <!-- Reason -->
                                <div class="form-group">
                                    <label>Причина (по желание):</label>
                                    <input type="text" class="form-control" id="scheduleReason"
                                           placeholder="напр. Лична причина, Отпуск, и т.н.">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отказ</button>
                        <button type="button" class="btn btn-primary" onclick="saveSchedule()">
                            <i class="fas fa-save"></i> Запази
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/client_profile.css') }}">
    {% if user.isBarber %}
        <link rel="stylesheet" href="{{ asset('css/barber_appointments.css') }}">
        <link rel="stylesheet" href="{{ asset('css/barber_calendar.css') }}">
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/client_profile.js') }}"></script>
    {% if user.isBarber %}
        <script src="{{ asset('js/barber_appointments.js') }}"></script>
        <script src="{{ asset('js/barber_calendar.js') }}"></script>

        <script>
            // Activate correct tab from URL parameter
            $(document).ready(function() {
                const urlParams = new URLSearchParams(window.location.search);
                const tab = urlParams.get('tab');

                if (tab) {
                    // Use Bootstrap's tab API to properly activate the tab
                    $('#' + tab + '-tab').tab('show');
                }
            });
        </script>
    {% endif %}
{% endblock %}
