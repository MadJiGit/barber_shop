{% extends 'base.html.twig' %}

{% block title %}{{ 'homepage.title' | trans }}{% endblock %}

{% block body %}
    <!--? Slider Area Start -->
    <div class="slider-area position-relative fix">
        <div class="slider-active">
            <!-- Single Slider -->
            <div class="single-slider slider-height d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-8 col-lg-9 col-md-11 col-sm-10">
                            <div class="hero__caption">
                                <span data-animation="fadeInUp" data-delay="0.2s">{{ 'homepage.welcome_1' | trans }}</span>
                                <h1 data-animation="fadeInUp" data-delay="0.5s">{{ 'homepage.welcome_2' | trans }}</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Stroke Text -->
        <!-- Call to Action Arrow -->
        <div class="thumb-content-box">
            {% if app.user %}
                <a href="{{ path('appointment_book', {id: app.user.id}) }}" class="thumb-content-link">
                    <div class="thumb-content">
                        <h3>{{ 'homepage.make_appointment' | trans }}</h3>
                        <i class="fas fa-long-arrow-alt-right"></i>
                    </div>
                </a>
            {% else %}
                <a href="{{ path('appointment_book') }}" class="thumb-content-link">
                    <div class="thumb-content">
                        <h3>{{ 'homepage.make_appointment' | trans }}</h3>
                        <i class="fas fa-long-arrow-alt-right"></i>
                    </div>
                </a>
            {% endif %}
        </div>
    </div>
    <!-- Slider Area End -->

    <!--? About Area Start -->
    <section class="about-area section-padding30 position-relative">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-11">
                    <div class="about-img">
                        <img src="{{ asset('assets/img/gallery/about.png') }}" alt="About Us">
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="about-caption">
                        <div class="section-tittle section-tittle3 mb-35">
                            <span>{{ 'homepage.about_us.title' | trans }}</span>
                            <h2>{{ 'homepage.about_us.description' | trans }}</h2>
                        </div>
                        <p class="mb-30 pera-bottom">
                            {{ 'homepage.about_us.we_provide' | trans }}
                        </p>
                        <p class="pera-top mb-50">
                            {{ 'homepage.about_us.our_team' | trans }}
                        </p>
                        {% if not app.user %}
                            <a href="{{ path('app_register') }}" class="btn header-btn">{{ 'homepage.about_us.become_a_member' | trans }}</a>

                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <!-- About Shape -->
        <div class="about-shape">
            <img src="{{ asset('assets/img/gallery/about-shape.png') }}" alt="">
        </div>
    </section>
    <!-- About Area End -->

    <!--? Services Area Start -->
    <section class="service-area pb-170">
        <div class="container">
            <!-- Section Title -->
            <div class="row d-flex justify-content-center">
                <div class="col-xl-7 col-lg-8 col-md-11 col-sm-11">
                    <div class="section-tittle text-center mb-90">
                        <span>{{ 'homepage.service.title' | trans }}</span>
                        <h2>{{ 'homepage.service.description' | trans }}</h2>
                    </div>
                </div>
            </div>
            <!-- Services Grid -->
            <div class="row">
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="services-caption text-center mb-30">
                        <div class="service-icon">
                            {# OLD: Flaticon (to be replaced with purchased font icons) #}
                            {# <i class="flaticon-healthcare-and-medical"></i> #}
                            {# NEW: PNG icon (temporary until font purchased) #}
                            <img src="{{ asset('assets/img/hairstyle.png') }}" alt="Haircut">
                        </div>
                        <div class="service-cap">
                            <h4><a href="#">{{ 'homepage.service.service_1.title' | trans }}</a></h4>
                            <p>{{ 'homepage.service.service_1.description' | trans }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="services-caption active text-center mb-30">
                        <div class="service-icon">
                            {# OLD: Flaticon (to be replaced with purchased font icons) #}
                            {# <i class="flaticon-fitness"></i> #}
                            {# NEW: PNG icon (temporary until font purchased) #}
                            <img src="{{ asset('assets/img/hot-towel.png') }}" alt="Hot Towel Shave">
                        </div>
                        <div class="service-cap">
                            <h4><a href="#">{{ 'homepage.service.service_2.title' | trans }}</a></h4>
                            <p>{{ 'homepage.service.service_2.description' | trans }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="services-caption text-center mb-30">
                        <div class="service-icon">
                            {# OLD: Flaticon (to be replaced with purchased font icons) #}
                            {# <i class="flaticon-clock"></i> #}
                            {# NEW: PNG icon (temporary until font purchased) #}
                            <img src="{{ asset('assets/img/beard.png') }}" alt="Beard Styling">
                        </div>
                        <div class="service-cap">
                            <h4><a href="#">{{ 'homepage.service.service_3.title' | trans }}</a></h4>
                            <p>{{ 'homepage.service.service_3.description' | trans }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Icon Attribution -->
            <div class="row">
                <div class="col-12">
                    <p class="icon-attribution">
                        <a href="https://www.flaticon.com/free-icons/barbershop" title="barbershop icons" target="_blank" rel="noopener">Barbershop icons created by Smashicons - Flaticon</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
    <!-- Services Area End -->

    <!--? Booking Section for Guests -->
    {% if not app.user %}
    <section id="guest-booking" class="appointment-area section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8 col-lg-10">
                    <div class="section-tittle text-center mb-60">
                        <span>{{ 'homepage.booking.title_1' | trans }}</span>
                        <h2>{{ 'homepage.booking.title_2' | trans }}</h2>
                        <p class="mt-20">{{ 'homepage.booking.description' | trans }}</p>
                    </div>

                    <div class="appointment-info-box">
                        <div class="info-item">
                            <i class="fas fa-envelope"></i>
                            <p>{{ 'homepage.booking.email' | trans }}</p>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-link"></i>
                            <p>{{ 'homepage.booking.manage' | trans }}</p>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-user-plus"></i>
                            <p>{{ 'homepage.booking.track_description' | trans }}
                                <a href="{{ path('app_register') }}">{{ 'homepage.booking.track_button' | trans }}</a>
                            </p>
                        </div>
                    </div>

                    <div class="guest-booking-action text-center mt-60">
                        <div class="action-content">
{#                            <i class="fas fa-calendar-check fa-3x mb-20" style="color: #d4a024;"></i>#}
{#                            <h4>{{ 'homepage.booking.ready_title' | trans }}</h4>#}
{#                            <p class="mb-30">{{ 'homepage.booking.ready_description' | trans }}</p>#}
                            <a href="{{ path('appointment_book') }}" class="btn header-btn btn-lg">{{ 'homepage.booking.book_now_button' | trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    <!--? Pricing Area Start -->
    <section class="pricing-area section-padding30 fix">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="section-tittle text-center mb-55">
                        <span>{{ 'homepage.pricing.subtitle' | trans }}</span>
                        <h2>{{ 'homepage.pricing.title' | trans }}</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="properties pb-30">
                        <div class="properties-caption">
                            <h3>{{ 'homepage.pricing.basic.name' | trans }}</h3>
                            <div class="price">
                                <span class="amount">{{ 'homepage.pricing.basic.price' | trans }}</span>
                                <span class="duration">{{ 'homepage.pricing.basic.duration' | trans }}</span>
                            </div>
                            <ul class="pricing-features">
                                <li>{{ 'homepage.pricing.basic.feature1' | trans }}</li>
                                <li>{{ 'homepage.pricing.basic.feature2' | trans }}</li>
                                <li>{{ 'homepage.pricing.basic.feature3' | trans }}</li>
                                <li>{{ 'homepage.pricing.basic.feature4' | trans }}</li>
                            </ul>
                            {% if app.user %}
                                <a href="{{ path('appointment_book', {id: app.user.id}) }}" class="border-btn">{{ 'homepage.pricing.book_now' | trans }}</a>
                            {% else %}
                                <a href="{{ path('appointment_book') }}" class="border-btn">{{ 'homepage.pricing.book_now' | trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="properties pb-30">
                        <div class="properties-caption">
                            <h3>{{ 'homepage.pricing.premium.name' | trans }}</h3>
                            <div class="price">
                                <span class="amount">{{ 'homepage.pricing.premium.price' | trans }}</span>
                                <span class="duration">{{ 'homepage.pricing.premium.duration' | trans }}</span>
                            </div>
                            <ul class="pricing-features">
                                <li>{{ 'homepage.pricing.premium.feature1' | trans }}</li>
                                <li>{{ 'homepage.pricing.premium.feature2' | trans }}</li>
                                <li>{{ 'homepage.pricing.premium.feature3' | trans }}</li>
                                <li>{{ 'homepage.pricing.premium.feature4' | trans }}</li>
                                <li>{{ 'homepage.pricing.premium.feature5' | trans }}</li>
                            </ul>
                            {% if app.user %}
                                <a href="{{ path('appointment_book', {id: app.user.id}) }}" class="border-btn">{{ 'homepage.pricing.book_now' | trans }}</a>
                            {% else %}
                                <a href="{{ path('appointment_book') }}" class="border-btn">{{ 'homepage.pricing.book_now' | trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="properties pb-30">
                        <div class="properties-caption">
                            <h3>{{ 'homepage.pricing.deluxe.name' | trans }}</h3>
                            <div class="price">
                                <span class="amount">{{ 'homepage.pricing.deluxe.price' | trans }}</span>
                                <span class="duration">{{ 'homepage.pricing.deluxe.duration' | trans }}</span>
                            </div>
                            <ul class="pricing-features">
                                <li>{{ 'homepage.pricing.deluxe.feature1' | trans }}</li>
                                <li>{{ 'homepage.pricing.deluxe.feature2' | trans }}</li>
                                <li>{{ 'homepage.pricing.deluxe.feature3' | trans }}</li>
                                <li>{{ 'homepage.pricing.deluxe.feature4' | trans }}</li>
                                <li>{{ 'homepage.pricing.deluxe.feature5' | trans }}</li>
                                <li>{{ 'homepage.pricing.deluxe.feature6' | trans }}</li>
                            </ul>
                            {% if app.user %}
                                <a href="{{ path('appointment_book', {id: app.user.id}) }}" class="border-btn">{{ 'homepage.pricing.book_now' | trans }}</a>
                            {% else %}
                                <a href="{{ path('appointment_book') }}" class="border-btn">{{ 'homepage.pricing.book_now' | trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Pricing Area End -->

    <!--? Our Team Area Start -->
    <section class="team-area section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="section-tittle text-center mb-55">
                        <span>{{ 'homepage.team.subtitle' | trans }}</span>
                        <h2>{{ 'homepage.team.title' | trans }}</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Team Member 1 -->
                <div class="col-xl-6 col-lg-6 col-md-6">
                    <div class="team-card text-center mb-30">
                        <div class="team-img">
                            <img src="{{ asset('assets/img/team/barber1.webp') }}" alt="{{ 'homepage.team.member1.name' | trans }}" class="img-fluid">
                        </div>
                        <div class="team-caption">
                            <h3>{{ 'homepage.team.member1.name' | trans }}</h3>
                            <span>{{ 'homepage.team.member1.role' | trans }}</span>
                        </div>
                    </div>
                </div>
                <!-- Team Member 2 -->
                <div class="col-xl-6 col-lg-6 col-md-6">
                    <div class="team-card text-center mb-30">
                        <div class="team-img">
                            <img src="{{ asset('assets/img/team/barber2.webp') }}" alt="{{ 'homepage.team.member2.name' | trans }}" class="img-fluid">
                        </div>
                        <div class="team-caption">
                            <h3>{{ 'homepage.team.member2.name' | trans }}</h3>
                            <span>{{ 'homepage.team.member2.role' | trans }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Our Team Area End -->

    <!--? Testimonials Area Start -->
    <div class="testimonial-area fix">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="section-tittle text-center mb-80">
                        <span>{{ 'homepage.testimonials.subtitle' | trans }}</span>
                        <h2>{{ 'homepage.testimonials.title' | trans }}</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="testimonial-active dot-style">
                        <!-- Testimonials will be loaded dynamically from JSON -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Testimonials Area End -->

    <!--? Contact Section Start -->
    <section class="contact-section section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="section-tittle text-center mb-55">
                        <span>{{ 'homepage.contact.subtitle' | trans }}</span>
                        <h2>{{ 'homepage.contact.title' | trans }}</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-12 mb-30">
                    <div class="contact-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23633.63297939591!2d23.31971!3d42.69771!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa8682cb317bf5%3A0x400a01269bf5e60!2sSofia%2C%20Bulgaria!5e0!3m2!1sen!2sbg!4v1234567890" width="100%" height="450" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 mb-30">
                    <div class="contact-info">
                        <div class="contact-info-item">
                            <div class="contact-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="contact-text">
                                <h4>{{ 'homepage.contact.address_label' | trans }}</h4>
                                <p>{{ 'homepage.contact.address' | trans }}</p>
                            </div>
                        </div>
                        <div class="contact-info-item">
                            <div class="contact-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="contact-text">
                                <h4>{{ 'homepage.contact.phone_label' | trans }}</h4>
                                <p><a href="tel:{{ contact_phone_link }}">{{ contact_phone }}</a></p>
                            </div>
                        </div>
                        <div class="contact-info-item">
                            <div class="contact-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="contact-text">
                                <h4>{{ 'homepage.contact.email_label' | trans }}</h4>
                                <p><a href="mailto:{{ contact_email }}">{{ contact_email }}</a></p>
                            </div>
                        </div>
                        <div class="contact-info-item">
                            <div class="contact-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="contact-text">
                                <h4>{{ 'homepage.contact.hours_label' | trans }}</h4>
                                <p>{{ 'homepage.contact.hours_workday' | trans }}</p>
                                <p>{{ 'homepage.contact.hours_saturday' | trans }}</p>
                                <p>{{ 'homepage.contact.hours_sunday' | trans }}</p>
                            </div>
                        </div>
                        <div class="contact-info-item">
                            <div class="contact-icon">
                                <i class="fas fa-share-alt"></i>
                            </div>
                            <div class="contact-text">
                                <h4>{{ 'homepage.contact.social_label' | trans }}</h4>
                                <div class="contact-social">
                                    <a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#" target="_blank"><i class="fab fa-twitter"></i></a>
                                    <a href="#" target="_blank"><i class="fab fa-instagram"></i></a>
                                    <a href="#" target="_blank"><i class="fas fa-globe"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->

{% endblock %}