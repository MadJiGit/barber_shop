{% extends 'base.html.twig' %}

{% block title %}{{ 'homepage.title' | trans }}{% endblock %}

{% block body %}
    <!--? Slider Area Start -->
    <div class="slider-area position-relative fix">
        <div class="slider-active">
            <!-- Single Slider -->
            <div class="single-slider slider-height d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-8 col-lg-9 col-md-11 col-sm-10">
                            <div class="hero__caption">
                                <span data-animation="fadeInUp" data-delay="0.2s">{{ 'homepage.welcome_1' | trans }}</span>
                                <h1 data-animation="fadeInUp" data-delay="0.5s">{{ 'homepage.welcome_2' | trans }}</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Stroke Text -->
        <!-- Call to Action Arrow -->
        <div class="thumb-content-box">
            {% if app.user %}
                <a href="{{ path('appointment_book', {id: app.user.id}) }}" class="thumb-content-link">
                    <div class="thumb-content">
                        <h3>{{ 'homepage.make_appointment' | trans }}</h3>
                        <i class="fas fa-long-arrow-alt-right"></i>
                    </div>
                </a>
            {% else %}
                <a href="#guest-booking" class="thumb-content-link">
                    <div class="thumb-content">
                        <h3>{{ 'homepage.make_appointment' | trans }}</h3>
                        <i class="fas fa-long-arrow-alt-right"></i>
                    </div>
                </a>
            {% endif %}
        </div>
    </div>
    <!-- Slider Area End -->

    <!--? About Area Start -->
    <section class="about-area section-padding30 position-relative">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-11">
                    <div class="about-img">
                        <img src="{{ asset('assets/img/gallery/about.png') }}" alt="About Us">
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="about-caption">
                        <div class="section-tittle section-tittle3 mb-35">
                            <span>{{ 'homepage.about_us.title' | trans }}</span>
                            <h2>{{ 'homepage.about_us.description' | trans }}</h2>
                        </div>
                        <p class="mb-30 pera-bottom">
                            {{ 'homepage.about_us.we_provide' | trans }}
                        </p>
                        <p class="pera-top mb-50">
                            {{ 'homepage.about_us.our_team' | trans }}
                        </p>
                        {% if not app.user %}
                            <a href="{{ path('app_register') }}" class="btn header-btn">{{ 'homepage.about_us.become_a_member' | trans }}</a>

                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <!-- About Shape -->
        <div class="about-shape">
            <img src="{{ asset('assets/img/gallery/about-shape.png') }}" alt="">
        </div>
    </section>
    <!-- About Area End -->

    <!--? Services Area Start -->
    <section class="service-area pb-170">
        <div class="container">
            <!-- Section Title -->
            <div class="row d-flex justify-content-center">
                <div class="col-xl-7 col-lg-8 col-md-11 col-sm-11">
                    <div class="section-tittle text-center mb-90">
                        <span>{{ 'homepage.service.title' | trans }}</span>
                        <h2>{{ 'homepage.service.description' | trans }}</h2>
                    </div>
                </div>
            </div>
            <!-- Services Grid -->
            <div class="row">
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="services-caption text-center mb-30">
                        <div class="service-icon">
                            {# OLD: Flaticon (to be replaced with purchased font icons) #}
                            {# <i class="flaticon-healthcare-and-medical"></i> #}
                            {# NEW: PNG icon (temporary until font purchased) #}
                            <img src="{{ asset('assets/img/hairstyle.png') }}" alt="Haircut" style="width: 70px; height: 70px;">
                        </div>
                        <div class="service-cap">
                            <h4><a href="#">{{ 'homepage.service.service_1.title' | trans }}</a></h4>
                            <p>{{ 'homepage.service.service_1.description' | trans }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="services-caption active text-center mb-30">
                        <div class="service-icon">
                            {# OLD: Flaticon (to be replaced with purchased font icons) #}
                            {# <i class="flaticon-fitness"></i> #}
                            {# NEW: PNG icon (temporary until font purchased) #}
                            <img src="{{ asset('assets/img/hot-towel.png') }}" alt="Hot Towel Shave" style="width: 70px; height: 70px;">
                        </div>
                        <div class="service-cap">
                            <h4><a href="#">{{ 'homepage.service.service_2.title' | trans }}</a></h4>
                            <p>{{ 'homepage.service.service_2.description' | trans }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="services-caption text-center mb-30">
                        <div class="service-icon">
                            {# OLD: Flaticon (to be replaced with purchased font icons) #}
                            {# <i class="flaticon-clock"></i> #}
                            {# NEW: PNG icon (temporary until font purchased) #}
                            <img src="{{ asset('assets/img/beard.png') }}" alt="Beard Styling" style="width: 70px; height: 70px;">
                        </div>
                        <div class="service-cap">
                            <h4><a href="#">{{ 'homepage.service.service_3.title' | trans }}</a></h4>
                            <p>{{ 'homepage.service.service_3.description' | trans }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Services Area End -->

    <!--? Booking Section for Guests -->
    {% if not app.user %}
    <section id="guest-booking" class="appointment-area section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8 col-lg-10">
                    <div class="section-tittle text-center mb-60">
                        <span>{{ 'homepage.booking.title_1' | trans }}</span>
                        <h2>{{ 'homepage.booking.title_2' | trans }}</h2>
                        <p class="mt-20">{{ 'homepage.booking.description' | trans }}</p>
                    </div>

                    <div class="appointment-info-box">
                        <div class="info-item">
                            <i class="fas fa-envelope"></i>
                            <p>{{ 'homepage.booking.email' | trans }}</p>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-link"></i>
                            <p>{{ 'homepage.booking.manage' | trans }}</p>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-user-plus"></i>
                            <p>{{ 'homepage.booking.track_description' | trans }}
                                <a href="{{ path('app_register') }}">{{ 'homepage.booking.track_button' | trans }}</a>
                            </p>
                        </div>
                    </div>

                    <div class="guest-booking-action text-center mt-60">
                        <div class="action-content">
{#                            <i class="fas fa-calendar-check fa-3x mb-20" style="color: #d4a024;"></i>#}
{#                            <h4>{{ 'homepage.booking.ready_title' | trans }}</h4>#}
{#                            <p class="mb-30">{{ 'homepage.booking.ready_description' | trans }}</p>#}
                            <a href="{{ path('appointment_book') }}" class="btn header-btn btn-lg">{{ 'homepage.booking.book_now_button' | trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    <!--? Pricing Area Start -->
    <section class="pricing-area section-padding30 fix">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="section-tittle text-center mb-55">
                        <span>Pricing Plans</span>
                        <h2>Our Affordable Pricing</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="properties pb-30">
                        <div class="properties-caption">
                            <h3>Basic Package</h3>
                            <div class="price">
                                <span class="amount">$25</span>
                                <span class="duration">/ Haircut</span>
                            </div>
                            <ul class="pricing-features">
                                <li>Professional Haircut</li>
                                <li>Hair Wash</li>
                                <li>Basic Styling</li>
                                <li>30-40 minutes</li>
                            </ul>
                            {% if app.user %}
                                <a href="{{ path('appointment_book', {id: app.user.id}) }}" class="border-btn">Book Now</a>
                            {% else %}
                                <a href="{{ path('appointment_book') }}" class="border-btn">Book Now</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="properties pb-30">
                        <div class="properties-caption">
                            <h3>Premium Package</h3>
                            <div class="price">
                                <span class="amount">$40</span>
                                <span class="duration">/ Service</span>
                            </div>
                            <ul class="pricing-features">
                                <li>Premium Haircut & Styling</li>
                                <li>Hair Treatment</li>
                                <li>Beard Styling</li>
                                <li>Hot Towel Service</li>
                                <li>45-55 minutes</li>
                            </ul>
                            {% if app.user %}
                                <a href="{{ path('appointment_book', {id: app.user.id}) }}" class="border-btn">Book Now</a>
                            {% else %}
                                <a href="{{ path('appointment_book') }}" class="border-btn">Book Now</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="properties pb-30">
                        <div class="properties-caption">
                            <h3>Deluxe Package</h3>
                            <div class="price">
                                <span class="amount">$60</span>
                                <span class="duration">/ Full Service</span>
                            </div>
                            <ul class="pricing-features">
                                <li>Premium Haircut & Coloring</li>
                                <li>Deep Hair Treatment</li>
                                <li>Beard Sculpting</li>
                                <li>Hot Towel Shave</li>
                                <li>Head Massage</li>
                                <li>90+ minutes</li>
                            </ul>
                            {% if app.user %}
                                <a href="{{ path('appointment_book', {id: app.user.id}) }}" class="border-btn">Book Now</a>
                            {% else %}
                                <a href="{{ path('appointment_book') }}" class="border-btn">Book Now</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Pricing Area End -->

    <!--? Testimonials Area Start -->
    <div class="testimonial-area fix">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="section-tittle text-center mb-80">
                        <span>Testimonials</span>
                        <h2>What Our Clients Say</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="testimonial-active dot-style">
                        <!-- Single Testimonial -->
                        <div class="single-testimonial text-center">
                            <div class="testimonial-caption">
                                <div class="testimonial-top-cap">
                                    <p>"Excellent service! The barbers are highly skilled and the atmosphere is very professional. I've been a regular customer for over a year now."</p>
                                </div>
                                <div class="testimonial-founder d-flex align-items-center justify-content-center">
                                    <div class="founder-text">
                                        <span>John Smith</span>
                                        <p>Regular Client</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Testimonials Area End -->

    <!-- Attribution -->
    <div class="container pb-20">
        <div class="row">
            <div class="col-12 text-center">
                <p class="text-muted" style="font-size: 12px;">
                    <a href="https://www.flaticon.com/free-icons/barbershop" title="barbershop icons" target="_blank" rel="noopener">Barbershop icons created by Smashicons - Flaticon</a>
                </p>
            </div>
        </div>
    </div>

{% endblock %}