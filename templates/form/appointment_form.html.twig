        <p class="barber_rows">{{ form_row(form.date) }}</p>
        {%  for barber in barbers  %}
            <p class="barber_rows">{{ " " ~ barber.nick_name }}</p>

        {% endfor %}
{#        {{ form_row(form.barber) }}#}
<p class="barber_rows">{{ form_row(form.save) }}</p>
        <p class="barber_rows">{{ form_end(form, {'render_rest': false,  'attr': {'class': 'form_class'}}) }}</p>
    {% endif  %}

{% endblock %}



