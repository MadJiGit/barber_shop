{% extends 'base.html.twig' %}

{% block title %}Book Your Appointment - Barber Shop{% endblock %}

{% block body %}
    <!--? Breadcrumb Area Start -->
    <div class="slider-area">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 text-center">
                            <h2>Book Your Appointment</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Area End -->

    <!--? Appointment Booking Section Start -->
    <section class="appointment-booking-section section-padding30">
        <div class="container">
            {% if user.isBarber %}
                <div class="row mb-30">
                    <div class="col-12">
                        <a href="{{ path('barber_appointments', {id: user.id}) }}" class="btn btn-primary">
                            <i class="fas fa-calendar-alt"></i> View My Appointments
                        </a>
                    </div>
                </div>
            {% endif %}

            {% if user.isClient and user.firstName %}
                <div class="row justify-content-center">
                    <div class="col-xl-10 col-lg-11">
                        <!-- Section Title -->
                        <div class="section-tittle text-center mb-50">
                            <span>Select Your Preferences</span>
                            <h2>Choose Barber, Service & Time</h2>
                        </div>

                        <!-- Appointment Form -->
                        <form id="appointment_form" method="post" class="appointment-form">
                            {{ form_row(form._token) }}

                            <div class="row">
                                <!-- Date Selection -->
                                <div class="col-lg-12 mb-40">
                                    <div class="form-card">
                                        <h4 class="form-card-title">
                                            <i class="far fa-calendar"></i> Select Date
                                        </h4>
                                        <div class="date-control-wrapper">
                                            <button class="date-arrow-btn" type="button" id="take_out_a_day_arrow">
                                                <i class="fas fa-chevron-left"></i>
                                            </button>
                                            <input class="date-control-input"
                                                   type="date"
                                                   id="calendar"
                                                   name="appointment_start"
                                                   value="{{ today }}"
                                                   min="{{ today }}"
                                                   max="2025-12-31"
                                            />
                                            <button class="date-arrow-btn" type="button" id="add_a_day_arrow">
                                                <i class="fas fa-chevron-right"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Barber Selection -->
                                <div class="col-lg-6 mb-40">
                                    <div class="form-card">
                                        <h4 class="form-card-title">
                                            <i class="fas fa-user-tie"></i> Choose Your Barber
                                        </h4>
                                        <select name="barbers" id="barbers" class="custom-select">
                                            <option value="">Select a barber...</option>
                                            {% for barber in barbers %}
                                                <option value="{{ barber.id }}">
                                                    {{ barber.firstName }} {{ barber.lastName }}
                                                    {% if barber.isBarberSenior %}(Senior){% endif %}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>

                                <!-- Service Selection -->
                                <div class="col-lg-6 mb-40">
                                    <div class="form-card">
                                        <h4 class="form-card-title">
                                            <i class="fas fa-cut"></i> Select Service
                                        </h4>
                                        <select name="procedures" id="procedures" class="custom-select">
                                            <option value="">Select a service...</option>
                                            {% for procedure in procedures %}
                                                <option value="{{ procedure.id }}">
                                                    {{ procedure.type }} - ${{ procedure.priceMaster }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>

                                <!-- Time Selection -->
                                <div class="col-lg-12 mb-40">
                                    <div class="form-card">
                                        <h4 class="form-card-title">
                                            <i class="far fa-clock"></i> Select Time
                                        </h4>

                                        <input type="hidden" name="pickedHours" id="pickedHours" value=""/>

                                        <div class="time-slots-grid">
                                            {% for key, value in table %}
                                                <button type="button"
                                                        class="time-slot-btn"
                                                        id="hour_select_{{ key }}"
                                                        data-time="{{ value }}"
                                                        onclick="pickHour('{{ value }}')">
                                                    <i class="far fa-clock"></i>
                                                    <span>{{ value }}</span>
                                                </button>
                                            {% endfor %}
                                        </div>

                                        <div class="selected-time-display mt-3">
                                            <strong>Selected Time:</strong>
                                            <span id="selected-time-display">Not selected</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <div class="col-lg-12 text-center">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-check"></i> Reserve Appointment
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            {% else %}
                <!-- User needs to complete profile -->
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <div class="alert alert-warning">
                            <h4>Complete Your Profile</h4>
                            <p>Please complete your profile information before booking an appointment.</p>
                            <a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-primary mt-3">
                                Complete Profile
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
    <!-- Appointment Booking Section End -->

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/appointment_form.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Update pickHour function to show selected time
        function pickHour(time) {
            document.getElementById('pickedHours').value = time;
            document.getElementById('selected-time-display').textContent = time;

            // Remove active class from all time slots
            document.querySelectorAll('.time-slot-btn').forEach(btn => {
                btn.classList.remove('active');
            });

            // Add active class to clicked button
            event.target.closest('.time-slot-btn').classList.add('active');
        }
    </script>
{% endblock %}