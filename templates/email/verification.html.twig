{% extends 'email/base.html.twig' %}

{% block title %}{{ 'verify.title' | trans }}{% endblock %}

{% block header %}{{ 'verify.header' | trans }}{% endblock %}

{% block body %}
    <h2>{{ 'verify.hello' | trans }}{% if user.firstName %}, {{ user.firstName }}{% endif %}!</h2>

    <p>{{ 'verify.thank_you' | trans }}</p>

    <p>{{ 'verify.instructions' | trans }}</p>

    <div style="text-align: center;">
        <a href="{{ url('app_verify_email', {token: verificationToken}) }}" class="button">
            {{ 'verify.button' | trans }}
        </a>
    </div>

    <p>{{ 'verify.link_help' | trans }}</p>
    <p style="word-break: break-all; color: #7f8c8d; font-size: 14px;">
        {{ url('app_verify_email', {token: verificationToken}) }}
    </p>

    <p><strong>{{ 'verify.important' | trans }}:</strong> {{ 'verify.link_expiry' | trans }}</p>

    <hr style="border: none; border-top: 1px solid #e0e0e0; margin: 30px 0;">

    <p>{{ 'verify.ignore' | trans }}</p>
{% endblock %}
