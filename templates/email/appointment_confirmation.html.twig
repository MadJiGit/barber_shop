{% extends 'email/base.html.twig' %}

{% block body %}
    <h1 style="color: #28a745; margin-bottom: 20px;">{{ 'confirm.title' | trans }}</h1>

    <p style="font-size: 16px; line-height: 1.6; color: #333;">
        {{ 'confirm.hello' | trans }}{{ client.firstName ? ', ' ~ client.firstName : '' }},
    </p>

    <p style="font-size: 16px; line-height: 1.6; color: #333;">
        {{ 'confirm.message' | trans|raw }}
    </p>

    <div style="background-color: #f8f9fa; border-radius: 8px; padding: 20px; margin: 25px 0;">
        <h3 style="color: #d4a024; margin-top: 0; margin-bottom: 15px; border-bottom: 2px solid #d4a024; padding-bottom: 10px;">
            {{ 'confirm.details_title' | trans }}
        </h3>

        <table style="width: 100%; font-size: 15px; line-height: 1.8;">
            <tr>
                <td style="color: #666; padding: 5px 0;"><strong>{{ 'confirm.date' | trans }}:</strong></td>
                <td style="color: #333; padding: 5px 0;">{{ appointment.date|date('d.m.Y') }} ({% set dayNames = {0: '–ù–µ–¥–µ–ª—è', 1: '–ü–æ–Ω–µ–¥–µ–ª–Ω–∏–∫', 2: '–í—Ç–æ—Ä–Ω–∏–∫', 3: '–°—Ä—è–¥–∞', 4: '–ß–µ—Ç–≤—ä—Ä—Ç—ä–∫', 5: '–ü–µ—Ç—ä–∫', 6: '–°—ä–±–æ—Ç–∞'} %}{{ dayNames[appointment.date|date('w')] }})</td>
            </tr>
            <tr>
                <td style="color: #666; padding: 5px 0;"><strong>{{ 'confirm.time' | trans }}:</strong></td>
                <td style="color: #333; padding: 5px 0;">{{ appointment.date|date('H:i') }}</td>
            </tr>
            <tr>
                <td style="color: #666; padding: 5px 0;"><strong>{{ 'confirm.barber' | trans }}:</strong></td>
                <td style="color: #333; padding: 5px 0;">{{ barber.firstName }} {{ barber.lastName }}</td>
            </tr>
            <tr>
                <td style="color: #666; padding: 5px 0;"><strong>{{ 'confirm.service' | trans }}:</strong></td>
                <td style="color: #333; padding: 5px 0;">{{ appointment.procedureType.type }}</td>
            </tr>
            <tr>
                <td style="color: #666; padding: 5px 0;"><strong>{{ 'confirm.duration' | trans }}:</strong></td>
                <td style="color: #333; padding: 5px 0;">{{ appointment.duration }} {{ 'confirm.minutes' | trans }}</td>
            </tr>
            <tr>
                <td style="color: #666; padding: 5px 0;"><strong>{{ 'confirm.price' | trans }}:</strong></td>
                <td style="color: #333; padding: 5px 0; font-weight: bold;">{{ barber.isBarberJunior ? appointment.procedureType.priceJunior : appointment.procedureType.priceMaster }} {{ 'confirm.currency' | trans }}</td>
            </tr>
        </table>
    </div>

    <div style="background-color: #d1ecf1; border-left: 4px solid #0c5460; padding: 15px; margin: 25px 0;">
        <p style="margin: 0; color: #0c5460; font-size: 14px; line-height: 1.6;">
            <strong>{{ 'confirm.important' | trans }}:</strong> {{ 'confirm.important_text' | trans }}
        </p>
    </div>

    <div style="text-align: center; margin: 30px 0;">
        <a href="{{ url('profile_edit', {id: client.id}) }}"
           style="display: inline-block; padding: 15px 40px; background-color: #d4a024; color: #ffffff; text-decoration: none; border-radius: 5px; font-size: 16px; font-weight: bold; margin-right: 10px;">
            {{ 'confirm.view_appointments' | trans }}
        </a>
    </div>

    <p style="font-size: 14px; line-height: 1.6; color: #666; margin-top: 30px;">
        {{ 'confirm.see_you' | trans }}
    </p>

    <p style="font-size: 14px; line-height: 1.6; color: #666; margin-top: 10px;">
        {{ 'confirm.regards' | trans }}<br>
        <strong>{{ 'confirm.team' | trans }}</strong>
    </p>

    <p style="font-size: 12px; color: #999; margin-top: 30px; padding-top: 20px; border-top: 1px solid #e9ecef;">
        üìß –ó–∞ –≤—ä–ø—Ä–æ—Å–∏: <a href="mailto:contact@barber.com" style="color: #d4a024;">contact@barber.com</a>
    </p>
{% endblock %}
