{% extends 'base.html.twig' %}

{% block title %}Моят профил - Barber Shop{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>Моят профил</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? User Profile Section Start -->
    <section class="user-profile-section section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12">
                    <!-- User Info Header -->
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-header bg-white border-bottom py-3">
                            <h4 class="mb-0 text-center" style="color: #d4a574;">
                                <i class="fas fa-user-circle"></i>
                                {% if user.nickName %}
                                    {{ user.nickName }}
                                {% else %}
                                    {{ user.email }}
                                {% endif %}
                            </h4>
                        </div>
                    </div>

                    <!-- Tabs Navigation -->
                    <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab">
                                <i class="fas fa-user"></i> Моят профил
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="history-tab" data-toggle="tab" href="#history" role="tab">
                                <i class="fas fa-history"></i> История
                            </a>
                        </li>
                    </ul>

                    <!-- Tabs Content -->
                    <div class="tab-content" id="profileTabsContent">
                        <!-- Profile Tab -->
                        <div class="tab-pane fade show active" id="profile" role="tabpanel">
                            <div class="card shadow-sm border-0">
                                <div class="card-body p-4">
                                    {{ form_start(form, {'attr': {'class': 'user-profile-form', 'novalidate': 'novalidate', 'id': 'profileForm'}}) }}
                                    <input type="hidden" name="tab" value="profile">

                                    <div class="row">
                                        <!-- Email -->
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-envelope text-muted mr-2"></i>Email
                                                </label>
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'example@email.com'}}) }}
                                                {{ form_errors(form.email) }}
                                            </div>
                                        </div>

                                        <!-- First Name -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-user text-muted mr-2"></i>Име
                                                </label>
                                                {{ form_widget(form.first_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.first_name) }}
                                            </div>
                                        </div>

                                        <!-- Last Name -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-user text-muted mr-2"></i>Фамилия
                                                </label>
                                                {{ form_widget(form.last_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.last_name) }}
                                            </div>
                                        </div>

                                        <!-- Nickname -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_label(form.nick_name) }}
                                                {{ form_widget(form.nick_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.nick_name) }}
                                                <small class="form-text text-muted">По желание. Ако е празно ще използваме вашето име.</small>
                                            </div>
                                        </div>

                                        <!-- Phone -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-phone text-muted mr-2"></i>Телефон
                                                </label>
                                                {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.phone) }}
                                            </div>
                                        </div>

                                        <!-- Date Added (readonly) -->
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="text-muted">
                                                    <i class="fas fa-calendar-plus mr-2"></i>Член от
                                                </label>
                                                {{ form_widget(form.date_added, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="text-center mt-4">
                                        <a href="{{ path('main') }}" class="btn btn-outline-secondary btn-lg mr-2" id="backButton">
                                            <i class="fas fa-arrow-left"></i> Обратно към начало
                                        </a>
                                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg px-5'}, 'label': 'Запази промените'}) }}
                                    </div>

                                    {{ form_end(form, {'render_rest': false}) }}
                                </div>
                            </div>
                        </div>

                        <!-- Appointments Tab (with filters) -->
                        <div class="tab-pane fade" id="appointments" role="tabpanel">
                            <div class="card shadow-sm border-0">
                                <div class="card-header bg-white border-bottom py-3">
                                    <h5 class="mb-0" style="color: #d4a574;">
                                        <i class="fas fa-calendar-check"></i> Записани часове
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <!-- Filters -->
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <form method="GET" action="{{ path('profile_edit', {id: user.id}) }}" id="appointmentsFilterForm">
                                                <input type="hidden" name="tab" value="appointments">

                                                <div class="row">
                                                    <!-- Date From -->
                                                    <div class="col-md-4">
                                                        <label for="date_from">От дата:</label>
                                                        <input type="date"
                                                               class="form-control"
                                                               id="date_from"
                                                               name="date_from"
                                                               value="{{ clientFilters.date_from ?? '' }}">
                                                    </div>

                                                    <!-- Date To -->
                                                    <div class="col-md-4">
                                                        <label for="date_to">До дата:</label>
                                                        <input type="date"
                                                               class="form-control"
                                                               id="date_to"
                                                               name="date_to"
                                                               value="{{ clientFilters.date_to ?? '' }}">
                                                    </div>

                                                    <!-- Status Filter -->
                                                    <div class="col-md-4">
                                                        <label>Статус:</label>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="statuses[]" value="pending" id="status_pending" {{ 'pending' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="status_pending">Чакащи</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="statuses[]" value="confirmed" id="status_confirmed" {{ 'confirmed' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="status_confirmed">Потвърдени</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="statuses[]" value="completed" id="status_completed" {{ 'completed' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="status_completed">Завършени</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="statuses[]" value="cancelled" id="status_cancelled" {{ 'cancelled' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="status_cancelled">Отменени</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mt-3">
                                                    <div class="col-md-12">
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="fas fa-filter"></i> Филтрирай
                                                        </button>
                                                        <a href="{{ path('profile_edit', {id: user.id, tab: 'appointments'}) }}" class="btn btn-secondary ml-2">
                                                            <i class="fas fa-undo"></i> Изчисти
                                                        </a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                    <!-- Results count and items per page -->
                                    {% if clientAppointmentsPagination %}
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="text-muted mb-0">
                                                Показани {{ clientAppointments|length }} от {{ clientAppointmentsPagination.total }} записа
                                            </p>
                                            <form method="GET" action="{{ path('profile_edit', {id: user.id}) }}" class="form-inline">
                                                <input type="hidden" name="tab" value="appointments">
                                                <input type="hidden" name="date_from" value="{{ clientFilters.date_from ?? '' }}">
                                                <input type="hidden" name="date_to" value="{{ clientFilters.date_to ?? '' }}">
                                                {% for status in clientFilters.statuses %}
                                                    <input type="hidden" name="statuses[]" value="{{ status }}">
                                                {% endfor %}
                                                <input type="hidden" name="page" value="{{ clientAppointmentsPagination.page }}">

                                                <label class="mr-2 mb-0">Показвай:</label>
                                                <select name="limit" class="form-control form-control-sm" onchange="this.form.submit()">
                                                    <option value="10" {{ clientFilters.limit == 10 ? 'selected' : '' }}>10</option>
                                                    <option value="20" {{ clientFilters.limit == 20 ? 'selected' : '' }}>20</option>
                                                    <option value="50" {{ clientFilters.limit == 50 ? 'selected' : '' }}>50</option>
                                                </select>
                                            </form>
                                        </div>
                                    {% endif %}

                                    <!-- Appointments Table -->
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead style="background-color: #f8f9fa;">
                                                <tr>
                                                    <th>Дата</th>
                                                    <th>Час</th>
                                                    <th>Бръснар</th>
                                                    <th>Услуга</th>
                                                    <th>Статус</th>
                                                    <th class="text-right">Цена</th>
                                                    <th class="text-center">Действия</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% if clientAppointments is empty %}
                                                    <tr>
                                                        <td colspan="7" class="text-center py-4 text-muted">
                                                            <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                                            <p class="mb-0">Няма записани часове за избрания период.</p>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    {% for appointment in clientAppointments %}
                                                        {% set appointmentDateTime = appointment.date %}
                                                        {% set now = "now"|date('U') %}
                                                        {% set appointmentTimestamp = appointmentDateTime|date('U') %}
                                                        {% set isFuture = appointmentTimestamp > now %}

                                                        <tr>
                                                            <td>{{ appointment.date|date('d.m.Y') }}</td>
                                                            <td>{{ appointment.date|date('H:i') }}</td>
                                                            <td>
                                                                {{ appointment.barber.barberTitleBg }} {{ appointment.barber.firstName }}
                                                            </td>
                                                            <td>{{ appointment.procedureType.type }}</td>
                                                            <td>
                                                                {% if appointment.status == 'confirmed' %}
                                                                    <span class="badge badge-primary">Потвърден</span>
                                                                {% elseif appointment.status == 'completed' %}
                                                                    <span class="badge badge-success">Изпълнен</span>
                                                                {% elseif appointment.status == 'cancelled' %}
                                                                    <span class="badge badge-danger">Отменен</span>
                                                                {% elseif appointment.status == 'no_show' %}
                                                                    <span class="badge badge-warning">Недошъл</span>
                                                                {% else %}
                                                                    <span class="badge badge-secondary">{{ appointment.status }}</span>
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-right">
                                                                {% if appointment.barber.isBarberJunior %}
                                                                    {{ appointment.procedureType.priceJunior }} лв
                                                                {% else %}
                                                                    {{ appointment.procedureType.priceMaster }} лв
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-center" style="white-space: nowrap;">
                                                                {% if isFuture and appointment.status == 'confirmed' %}
                                                                    <a href="{{ path('client_reschedule_appointment', {id: appointment.id}) }}"
                                                                       class="btn btn-warning btn-xs mr-1"
                                                                       style="padding: 2px 6px; font-size: 12px;"
                                                                       title="Промяна на час">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                    <button type="button"
                                                                            class="btn btn-danger btn-xs"
                                                                            style="padding: 2px 6px; font-size: 12px;"
                                                                            onclick="cancelAppointment({{ appointment.id }}, '{{ csrf_token('cancel_appointment') }}', 'appointments')"
                                                                            title="Отмяна на час">
                                                                        <i class="fas fa-times"></i>
                                                                    </button>
                                                                {% else %}
                                                                    <span class="text-muted">—</span>
                                                                {% endif %}
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>

                                    <!-- Pagination -->
                                    {% if clientAppointmentsPagination and clientAppointmentsPagination.totalPages > 1 %}
                                        <nav aria-label="Page navigation" class="mt-4">
                                            <ul class="pagination justify-content-center">
                                                {% for page in 1..clientAppointmentsPagination.totalPages %}
                                                    <li class="page-item {{ page == clientAppointmentsPagination.page ? 'active' : '' }}">
                                                        <a class="page-link" href="{{ path('profile_edit', {
                                                            id: user.id,
                                                            tab: 'appointments',
                                                            page: page,
                                                            date_from: clientFilters.date_from,
                                                            date_to: clientFilters.date_to,
                                                            statuses: clientFilters.statuses,
                                                            limit: clientFilters.limit
                                                        }) }}">{{ page }}</a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </nav>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

