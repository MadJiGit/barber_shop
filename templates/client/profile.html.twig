{% extends 'base.html.twig' %}

{% block title %}{{ 'profile.title' | trans }}{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>{{ 'profile.hero_title' | trans }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? User Profile Section Start -->
    <section class="user-profile-section section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12">
                    <!-- User Info Header -->
                    <div class="card user-profile-card shadow-sm border-0 mb-4">
                        <div class="card-header bg-white border-bottom py-3">
                            <h4 class="mb-0 text-center">
                                <i class="fas fa-user-circle"></i>
                                {% if user.nickName %}
                                    {{ user.nickName }}
                                {% else %}
                                    {{ user.email }}
                                {% endif %}
                            </h4>
                        </div>
                    </div>

                    <!-- Tabs Navigation -->
                    <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab">
                                <i class="fas fa-user"></i> {{ 'profile.tabs.profile' | trans }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="history-tab" data-toggle="tab" href="#history" role="tab">
                                <i class="fas fa-history"></i> {{ 'profile.tabs.history' | trans }}
                            </a>
                        </li>
                    </ul>

                    <!-- Tabs Content -->
                    <div class="tab-content" id="profileTabsContent">
                        <!-- Profile Tab -->
                        <div class="tab-pane fade show active" id="profile" role="tabpanel">
                            <div class="card shadow-sm border-0">
                                <div class="card-body p-4">
                                    {{ form_start(form, {'attr': {'class': 'user-profile-form', 'novalidate': 'novalidate', 'id': 'profileForm'}}) }}
                                    {{ form_row(form._token) }}
                                    <input type="hidden" name="tab" value="profile">

                                    {# Display form-level errors #}
                                    {% if form.vars.errors|length > 0 %}
                                        <div class="alert alert-danger">
                                            <strong>Грешка:</strong>
                                            {{ form_errors(form) }}
                                        </div>
                                    {% endif %}

                                    <div class="row">
                                        <!-- Email -->
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-envelope text-muted mr-2"></i>{{ 'profile.form.email' | trans }}
                                                </label>
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'example@email.com'}}) }}
                                                {{ form_errors(form.email) }}
                                            </div>
                                        </div>

                                        <!-- First Name -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-user text-muted mr-2"></i>{{ 'profile.form.first_name' | trans }}
                                                </label>
                                                {{ form_widget(form.first_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.first_name) }}
                                            </div>
                                        </div>

                                        <!-- Last Name -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-user text-muted mr-2"></i>{{ 'profile.form.last_name' | trans }}
                                                </label>
                                                {{ form_widget(form.last_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.last_name) }}
                                            </div>
                                        </div>

                                        <!-- Nickname -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_label(form.nick_name) }}
                                                {{ form_widget(form.nick_name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.nick_name) }}
                                                <small class="form-text text-muted">{{ 'profile.form.nickname_help' | trans }}</small>
                                            </div>
                                        </div>

                                        <!-- Phone -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-phone text-muted mr-2"></i>{{ 'profile.form.phone' | trans }}
                                                </label>
                                                {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                                {{ form_errors(form.phone) }}
                                            </div>
                                        </div>

                                        <!-- Date Added (readonly) -->
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="text-muted">
                                                    <i class="fas fa-calendar-plus mr-2"></i>{{ 'profile.form.member_since' | trans }}
                                                </label>
                                                {{ form_widget(form.date_added, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Password Change Section -->
                                    <hr class="my-4">
                                    <h5 class="mb-3">
                                        <i class="fas fa-key text-warning mr-2"></i>{{ 'profile.password.title' | trans }}
                                    </h5>
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle mr-2"></i>
                                        <strong>{{ 'profile.password.important' | trans }}:</strong> {{ 'profile.password.info' | trans }}
                                    </div>

                                    <div class="row">
                                        <!-- Current Password -->
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-lock text-muted mr-2"></i>{{ 'profile.password.current' | trans }}
                                                </label>
                                                <div class="password-field-wrapper">
                                                    {{ form_widget(form.current_password, {'attr': {'class': 'form-control form-control-lg password-field', 'placeholder': 'profile.password.current_placeholder'|trans}}) }}
                                                    <i class="fas fa-eye password-toggle-icon" data-target="current_password"></i>
                                                </div>
                                                {{ form_errors(form.current_password) }}
                                            </div>
                                        </div>

                                        <!-- New Password -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-lock text-muted mr-2"></i>{{ 'profile.password.new' | trans }}
                                                </label>
                                                <div class="password-field-wrapper">
                                                    {{ form_widget(form.new_password, {'attr': {'class': 'form-control form-control-lg password-field', 'placeholder': 'profile.password.new_placeholder'|trans}}) }}
                                                    <i class="fas fa-eye password-toggle-icon" data-target="new_password"></i>
                                                </div>
                                                {{ form_errors(form.new_password) }}
                                                <small class="form-text text-muted">{{ 'profile.password.hint' | trans }}</small>
                                            </div>
                                        </div>

                                        <!-- Repeat New Password -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    <i class="fas fa-lock text-muted mr-2"></i>{{ 'profile.password.repeat' | trans }}
                                                </label>
                                                <div class="password-field-wrapper">
                                                    {{ form_widget(form.new_password_repeat, {'attr': {'class': 'form-control form-control-lg password-field', 'placeholder': 'profile.password.repeat_placeholder'|trans}}) }}
                                                    <i class="fas fa-eye password-toggle-icon" data-target="new_password_repeat"></i>
                                                </div>
                                                {{ form_errors(form.new_password_repeat) }}
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="text-center mt-4">
                                        <a href="{{ path('main') }}" class="btn btn-outline-secondary btn-lg px-5 mr-2" id="backButton">
                                            <i class="fas fa-arrow-left"></i> {{ 'profile.actions.back' | trans }}
                                        </a>
                                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg px-5'}, 'label': 'profile.actions.save'|trans}) }}
                                    </div>

                                    {{ form_end(form, {'render_rest': false}) }}
                                </div>
                            </div>
                        </div>

                        <!-- Appointments Tab (with filters) -->
                        <div class="tab-pane fade" id="appointments" role="tabpanel">
                            <div class="card shadow-sm border-0">
                                <div class="card-header bg-white border-bottom py-3">
                                    <h5 class="mb-0">
                                        <i class="fas fa-calendar-check"></i> {{ 'profile.tabs.appointments' | trans }}
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <!-- Filters -->
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <form method="GET" action="{{ path('profile_edit', {id: user.id}) }}" id="appointmentsFilterForm">
                                                <input type="hidden" name="tab" value="appointments">

                                                <div class="row">
                                                    <!-- Date From -->
                                                    <div class="col-md-4">
                                                        <label for="date_from">{{ 'profile.appointments.filters.from_date' | trans }}:</label>
                                                        <input type="date"
                                                               class="form-control"
                                                               id="date_from"
                                                               name="date_from"
                                                               value="{{ clientFilters.date_from ?? '' }}">
                                                    </div>

                                                    <!-- Date To -->
                                                    <div class="col-md-4">
                                                        <label for="date_to">{{ 'profile.appointments.filters.to_date' | trans }}:</label>
                                                        <input type="date"
                                                               class="form-control"
                                                               id="date_to"
                                                               name="date_to"
                                                               value="{{ clientFilters.date_to ?? '' }}">
                                                    </div>

                                                    <!-- Status Filter -->
                                                    <div class="col-md-4">
                                                        <label>{{ 'profile.appointments.filters.status' | trans }}:</label>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="statuses[]" value="pending" id="status_pending" {{ 'pending' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="status_pending">{{ 'profile.appointments.status.pending' | trans }}</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="statuses[]" value="confirmed" id="status_confirmed" {{ 'confirmed' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="status_confirmed">{{ 'profile.appointments.status.confirmed' | trans }}</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="statuses[]" value="completed" id="status_completed" {{ 'completed' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="status_completed">{{ 'profile.appointments.status.completed' | trans }}</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="statuses[]" value="cancelled" id="status_cancelled" {{ 'cancelled' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="status_cancelled">{{ 'profile.appointments.status.cancelled' | trans }}</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mt-3">
                                                    <div class="col-md-12">
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="fas fa-filter"></i> {{ 'profile.appointments.actions.filter' | trans }}
                                                        </button>
                                                        <a href="{{ path('profile_edit', {id: user.id, tab: 'appointments'}) }}" class="btn btn-secondary ml-2">
                                                            <i class="fas fa-undo"></i> {{ 'profile.appointments.actions.clear' | trans }}
                                                        </a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                    <!-- Results count and items per page -->
                                    {% if clientAppointmentsPagination %}
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="text-muted mb-0">
                                                {{ 'profile.appointments.results' | trans({
                                                    '%shown%': clientAppointments|length,
                                                    '%total%': clientAppointmentsPagination.total
                                                }) }}
                                            </p>
                                            <form method="GET" action="{{ path('profile_edit', {id: user.id}) }}" class="form-inline">
                                                <input type="hidden" name="tab" value="appointments">
                                                <input type="hidden" name="date_from" value="{{ clientFilters.date_from ?? '' }}">
                                                <input type="hidden" name="date_to" value="{{ clientFilters.date_to ?? '' }}">
                                                {% for status in clientFilters.statuses %}
                                                    <input type="hidden" name="statuses[]" value="{{ status }}">
                                                {% endfor %}
                                                <input type="hidden" name="page" value="{{ clientAppointmentsPagination.page }}">

                                                <label class="mr-2 mb-0">{{ 'profile.appointments.per_page' | trans }}:</label>
                                                <select name="limit" class="form-control form-control-sm" onchange="this.form.submit()">
                                                    <option value="10" {{ clientFilters.limit == 10 ? 'selected' : '' }}>10</option>
                                                    <option value="20" {{ clientFilters.limit == 20 ? 'selected' : '' }}>20</option>
                                                    <option value="50" {{ clientFilters.limit == 50 ? 'selected' : '' }}>50</option>
                                                </select>
                                            </form>
                                        </div>
                                    {% endif %}

                                    <!-- Appointments Table -->
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>{{ 'profile.appointments.table.date' | trans }}</th>
                                                    <th>{{ 'profile.appointments.table.time' | trans }}</th>
                                                    <th>{{ 'profile.appointments.table.barber' | trans }}</th>
                                                    <th>{{ 'profile.appointments.table.service' | trans }}</th>
                                                    <th>{{ 'profile.appointments.table.status' | trans }}</th>
                                                    <th class="text-right">{{ 'profile.appointments.table.price' | trans }}</th>
                                                    <th class="text-center">{{ 'profile.appointments.table.actions' | trans }}</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% if clientAppointments is empty %}
                                                    <tr>
                                                        <td colspan="7" class="text-center py-4 text-muted">
                                                            <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                                            <p class="mb-0">{{ 'profile.appointments.empty' | trans }}</p>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    {% for appointment in clientAppointments %}
                                                        {% set appointmentDateTime = appointment.date %}
                                                        {% set now = "now"|date('U') %}
                                                        {% set appointmentTimestamp = appointmentDateTime|date('U') %}
                                                        {% set isFuture = appointmentTimestamp > now %}

                                                        <tr>
                                                            <td>{{ appointment.date|date('d.m.Y') }}</td>
                                                            <td>{{ appointment.date|date('H:i') }}</td>
                                                            <td>
                                                                {{ ('roles.' ~ appointment.barber.barberRole) | trans }} {{ appointment.barber.firstName }}
                                                            </td>
                                                            <td>{{ appointment.procedureType.type }}</td>
                                                            <td>
                                                                {% if appointment.statusValue == 'confirmed' %}
                                                                    <span class="badge badge-primary">{{ 'profile.appointments.status.confirmed' | trans }}</span>
                                                                {% elseif appointment.statusValue == 'completed' %}
                                                                    <span class="badge badge-success">{{ 'profile.appointments.status.completed_done' | trans }}</span>
                                                                {% elseif appointment.statusValue == 'cancelled' %}
                                                                    <span class="badge badge-danger">{{ 'profile.appointments.status.cancelled' | trans }}</span>
                                                                {% elseif appointment.statusValue == 'no_show' %}
                                                                    <span class="badge badge-warning">{{ 'profile.appointments.status.no_show' | trans }}</span>
                                                                {% else %}
                                                                    <span class="badge badge-secondary">{{ appointment.statusValue }}</span>
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-right">
                                                                {% if appointment.barber.isBarberJunior %}
                                                                    {{ appointment.procedureType.priceJunior }} {{ 'profile.appointments.currency' | trans }}
                                                                {% else %}
                                                                    {{ appointment.procedureType.priceMaster }} {{ 'profile.appointments.currency' | trans }}
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-center">
                                                                {% if isFuture and appointment.statusValue == 'confirmed' %}
                                                                    <a href="{{ path('appointment_reschedule', {id: appointment.id}) }}"
                                                                       class="btn btn-warning btn-xs mr-1"
                                                                       title="{{ 'profile.appointments.actions.edit' | trans }}">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                    <button type="button"
                                                                            class="btn btn-danger btn-xs"
                                                                                 onclick="cancelAppointment({{ appointment.id }}, '{{ csrf_token('cancel_appointment') }}', 'appointments')"
                                                                            title="{{ 'profile.appointments.actions.cancel' | trans }}">
                                                                        <i class="fas fa-times"></i>
                                                                    </button>
                                                                {% else %}
                                                                    <span class="text-muted">—</span>
                                                                {% endif %}
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>

                                    <!-- Pagination -->
                                    {% if clientAppointmentsPagination and clientAppointmentsPagination.totalPages > 1 %}
                                        <nav aria-label="Page navigation" class="mt-4">
                                            <ul class="pagination justify-content-center">
                                                {% for page in 1..clientAppointmentsPagination.totalPages %}
                                                    <li class="page-item {{ page == clientAppointmentsPagination.page ? 'active' : '' }}">
                                                        <a class="page-link" href="{{ path('profile_edit', {
                                                            id: user.id,
                                                            tab: 'appointments',
                                                            page: page,
                                                            date_from: clientFilters.date_from,
                                                            date_to: clientFilters.date_to,
                                                            statuses: clientFilters.statuses,
                                                            limit: clientFilters.limit
                                                        }) }}">{{ page }}</a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </nav>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- History Tab (all personal appointments as client) -->
                        <div class="tab-pane fade" id="history" role="tabpanel">
                            <div class="card shadow-sm border-0">
                                <div class="card-header bg-white border-bottom py-3">
                                    <h5 class="mb-0">
                                        <i class="fas fa-history"></i> {{ 'profile.tabs.history_title' | trans }}
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <!-- Filters -->
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <form method="GET" action="{{ path('profile_edit', {id: user.id}) }}" id="historyFilterForm">
                                                <input type="hidden" name="tab" value="history">

                                                <div class="row">
                                                    <!-- Date From -->
                                                    <div class="col-md-4">
                                                        <label for="client_date_from">{{ 'profile.history.filters.from_date' | trans }}:</label>
                                                        <input type="date"
                                                               class="form-control"
                                                               id="client_date_from"
                                                               name="client_date_from"
                                                               value="{{ clientFilters.date_from ?? '' }}">
                                                    </div>

                                                    <!-- Date To -->
                                                    <div class="col-md-4">
                                                        <label for="client_date_to">{{ 'profile.history.filters.to_date' | trans }}:</label>
                                                        <input type="date"
                                                               class="form-control"
                                                               id="client_date_to"
                                                               name="client_date_to"
                                                               value="{{ clientFilters.date_to ?? '' }}">
                                                    </div>

                                                    <!-- Status Filter -->
                                                    <div class="col-md-4">
                                                        <label>{{ 'profile.history.filters.status' | trans }}:</label>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="client_statuses[]" value="pending" id="client_status_pending" {{ 'pending' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="client_status_pending">{{ 'profile.history.status.pending' | trans }}</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="client_statuses[]" value="confirmed" id="client_status_confirmed" {{ 'confirmed' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="client_status_confirmed">{{ 'profile.history.status.confirmed' | trans }}</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="client_statuses[]" value="completed" id="client_status_completed" {{ 'completed' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="client_status_completed">{{ 'profile.history.status.completed' | trans }}</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="client_statuses[]" value="cancelled" id="client_status_cancelled" {{ 'cancelled' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="client_status_cancelled">{{ 'profile.history.status.cancelled' | trans }}</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mt-3">
                                                    <div class="col-md-12">
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="fas fa-filter"></i> {{ 'profile.history.actions.filter' | trans }}
                                                        </button>
                                                        <a href="{{ path('profile_edit', {id: user.id, tab: 'history'}) }}" class="btn btn-secondary ml-2">
                                                            <i class="fas fa-undo"></i> {{ 'profile.history.actions.clear' | trans }}
                                                        </a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                    <!-- Results count and items per page -->
                                    {% if clientAppointmentsPagination %}
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="text-muted mb-0">
                                                {{ 'profile.history.results' | trans({
                                                    '%shown%': clientAppointments|length,
                                                    '%total%': clientAppointmentsPagination.total
                                                }) }}
                                            </p>
                                            <form method="GET" action="{{ path('profile_edit', {id: user.id}) }}" class="form-inline">
                                                <input type="hidden" name="tab" value="history">
                                                <input type="hidden" name="client_date_from" value="{{ clientFilters.date_from ?? '' }}">
                                                <input type="hidden" name="client_date_to" value="{{ clientFilters.date_to ?? '' }}">
                                                {% for status in clientFilters.statuses %}
                                                    <input type="hidden" name="client_statuses[]" value="{{ status }}">
                                                {% endfor %}
                                                <input type="hidden" name="client_page" value="{{ clientAppointmentsPagination.page }}">

                                                <label class="mr-2 mb-0">{{ 'profile.history.per_page' | trans }}:</label>
                                                <select name="client_limit" class="form-control form-control-sm" onchange="this.form.submit()">
                                                    <option value="10" {{ clientFilters.limit == 10 ? 'selected' : '' }}>10</option>
                                                    <option value="20" {{ clientFilters.limit == 20 ? 'selected' : '' }}>20</option>
                                                    <option value="50" {{ clientFilters.limit == 50 ? 'selected' : '' }}>50</option>
                                                </select>
                                            </form>
                                        </div>
                                    {% endif %}

                                    <!-- Appointments Table -->
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>{{ 'profile.history.table.date' | trans }}</th>
                                                    <th>{{ 'profile.history.table.time' | trans }}</th>
                                                    <th>{{ 'profile.history.table.barber' | trans }}</th>
                                                    <th>{{ 'profile.history.table.service' | trans }}</th>
                                                    <th>{{ 'profile.history.table.status' | trans }}</th>
                                                    <th class="text-right">{{ 'profile.history.table.price' | trans }}</th>
                                                    <th class="text-center">{{ 'profile.history.table.actions' | trans }}</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% if clientAppointments is empty %}
                                                    <tr>
                                                        <td colspan="7" class="text-center py-4 text-muted">
                                                            <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                                            <p class="mb-0">{{ 'profile.history.empty' | trans }}</p>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    {% for appointment in clientAppointments %}
                                                        {% set appointmentDateTime = appointment.date %}
                                                        {% set now = "now"|date('U') %}
                                                        {% set appointmentTimestamp = appointmentDateTime|date('U') %}
                                                        {% set isFuture = appointmentTimestamp > now %}

                                                        <tr>
                                                            <td>{{ appointment.date|date('d.m.Y') }}</td>
                                                            <td>{{ appointment.date|date('H:i') }}</td>
                                                            <td>
                                                                {{ ('roles.' ~ appointment.barber.barberRole) | trans }} {{ appointment.barber.firstName }}
                                                            </td>
                                                            <td>{{ appointment.procedureType.type }}</td>
                                                            <td>
                                                                {% if appointment.statusValue == 'confirmed' %}
                                                                    <span class="badge badge-primary">{{ 'profile.history.status.confirmed' | trans }}</span>
                                                                {% elseif appointment.statusValue == 'completed' %}
                                                                    <span class="badge badge-success">{{ 'profile.history.status.completed_done' | trans }}</span>
                                                                {% elseif appointment.statusValue == 'cancelled' %}
                                                                    <span class="badge badge-danger">{{ 'profile.history.status.cancelled' | trans }}</span>
                                                                {% elseif appointment.statusValue == 'no_show' %}
                                                                    <span class="badge badge-warning">{{ 'profile.history.status.no_show' | trans }}</span>
                                                                {% else %}
                                                                    <span class="badge badge-secondary">{{ appointment.statusValue }}</span>
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-right">
                                                                {% if appointment.barber.isBarberJunior %}
                                                                    {{ appointment.procedureType.priceJunior }} {{ 'profile.history.currency' | trans }}
                                                                {% else %}
                                                                    {{ appointment.procedureType.priceMaster }} {{ 'profile.history.currency' | trans }}
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-center">
                                                                {% if isFuture and appointment.statusValue == 'confirmed' %}
                                                                    <a href="{{ path('appointment_reschedule', {id: appointment.id}) }}"
                                                                       class="btn btn-warning btn-xs mr-1"
                                                                       title="{{ 'profile.history.actions.edit' | trans }}">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                    <button type="button"
                                                                            class="btn btn-danger btn-xs"
                                                                                 onclick="cancelAppointment({{ appointment.id }}, '{{ csrf_token('cancel_appointment') }}', 'history')"
                                                                            title="{{ 'profile.history.actions.cancel' | trans }}">
                                                                        <i class="fas fa-times"></i>
                                                                    </button>
                                                                {% else %}
                                                                    <span class="text-muted">—</span>
                                                                {% endif %}
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>

                                    <!-- Pagination -->
                                    {% if clientAppointmentsPagination and clientAppointmentsPagination.totalPages > 1 %}
                                        <nav aria-label="Page navigation" class="mt-4">
                                            <ul class="pagination justify-content-center">
                                                {% for page in 1..clientAppointmentsPagination.totalPages %}
                                                    <li class="page-item {{ page == clientAppointmentsPagination.page ? 'active' : '' }}">
                                                        <a class="page-link" href="{{ path('profile_edit', {
                                                            id: user.id,
                                                            tab: 'history',
                                                            client_page: page,
                                                            client_date_from: clientFilters.date_from,
                                                            client_date_to: clientFilters.date_to,
                                                            client_statuses: clientFilters.statuses,
                                                            client_limit: clientFilters.limit
                                                        }) }}">{{ page }}</a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </nav>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- User Profile Section End -->

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/client_profile.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/client_profile.js') }}"></script>
{% endblock %}
