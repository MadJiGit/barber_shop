                                                               id="client_date_to"
                                                               name="client_date_to"
                                                               value="{{ clientFilters.date_to ?? '' }}">
                                                    </div>

                                                    <!-- Status Filter -->
                                                    <div class="col-md-4">
                                                        <label>Статус:</label>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="client_statuses[]" value="pending" id="client_status_pending" {{ 'pending' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="client_status_pending">Чакащи</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="client_statuses[]" value="confirmed" id="client_status_confirmed" {{ 'confirmed' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="client_status_confirmed">Потвърдени</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="client_statuses[]" value="completed" id="client_status_completed" {{ 'completed' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="client_status_completed">Завършени</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="client_statuses[]" value="cancelled" id="client_status_cancelled" {{ 'cancelled' in clientFilters.statuses ? 'checked' : '' }}>
                                                            <label class="form-check-label" for="client_status_cancelled">Отменени</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mt-3">
