                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="text-muted mb-0">
                                                Показани {{ clientAppointments|length }} от {{ clientAppointmentsPagination.total }} записа
                                            </p>
                                            <form method="GET" action="{{ path('profile_edit', {id: user.id}) }}" class="form-inline">
                                                <input type="hidden" name="tab" value="history">
                                                <input type="hidden" name="client_date_from" value="{{ clientFilters.date_from ?? '' }}">
                                                <input type="hidden" name="client_date_to" value="{{ clientFilters.date_to ?? '' }}">
