<!doctype html>
<html class="no-js" lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% block title %}{{ 'base.header.title' | trans }}{% endblock %}</title>
    <meta name="description" content="{{ 'base.header.description' | trans }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('assets/favicon.png') }}">

    {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        <!-- Template CSS -->
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/owl.carousel.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/slicknav.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/flaticon.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/gijgo.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/animate.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/animated-headline.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/magnific-popup.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/fontawesome-all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/themify-icons.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/slick.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/nice-select.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">

        <!-- Custom CSS overrides -->
        <link rel="stylesheet" href="{{ asset('css/buttons.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link rel="stylesheet" href="{{ asset('css/loading.css') }}">
        <link rel="stylesheet" href="{{ asset('css/toast.css') }}">
    {% endblock %}
</head>
<body class="{% block body_class %}{% endblock %}">
    <!-- Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src="{{ asset('assets/img/logos/loder.png') }}" alt="Loading">
                </div>
            </div>
        </div>
    </div>
    <!-- Preloader End -->

    {% block header %}
        <header>
            <!--? Header Start -->
            <div class="header-area header-transparent pt-20">
                <div class="main-header header-sticky">
                    <div class="container-fluid">
                        <div class="row align-items-center">
                            <!-- Logo -->
                            <div class="col-xl-2 col-lg-2 col-md-1">
                                <div class="logo">
                                    <a href="{{ path('main') }}">
                                        <img src="{{ asset('assets/img/logos/logos.png') }}" alt="Barber Shop Logo">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-10 col-lg-10 col-md-10">
                                <div class="menu-main d-flex align-items-center justify-content-end">
                                    <!-- Main Menu -->
                                    <div class="main-menu f-right d-none d-lg-block">
                                        <nav>
                                            <ul id="navigation">
                                                <li><a href="{{ path('main') }}">{{ 'base.nav.home' | trans }}</a></li>
                                                {% if app.user %}
                                                    <li><a href="{{ path('appointment_book', {id: app.user.id}) }}">{{ 'base.nav.book_appointment' | trans }}</a></li>
                                                    {% if is_granted('ROLE_MANAGER') %}
                                                        <li><a href="{{ path('manager_dashboard', {id: app.user.id}) }}">{{ 'base.nav.manager' | trans }}</a></li>
                                                    {% endif %}
                                                    {% if is_granted('ROLE_ADMIN') %}
                                                        <li><a href="{{ path('admin', {id: app.user.id}) }}">{{ 'base.nav.admin' | trans }}</a></li>
                                                    {% endif %}
                                                    <li><a href="{{ path('profile_edit', {id: app.user.id}) }}">{{ 'base.nav.hello' | trans }}, {{ app.user.nickName ?? app.user.firstName ?? app.user.lastName ?? app.user.email }}</a></li>
                                                    <li><a href="{{ path('app_logout') }}">{{ 'base.nav.logout' | trans }}</a></li>
                                                {% else %}
                                                    <li><a href="{{ path('app_login') }}">{{ 'base.nav.login' | trans }}</a></li>
                                                    <li><a href="{{ path('app_register') }}">{{ 'base.nav.register' | trans }}</a></li>
                                                {% endif %}
                                                {% if app.request.locale == 'en' %}
                                                    <li><a href="{{ path('app_locale', {'_locale': 'bg'}) }}">{{ 'base.nav.BG' | trans }}</a></li>
                                                {% else %}
                                                    <li><a href="{{ path('app_locale', {'_locale': 'en'}) }}">{{ 'base.nav.EN' | trans }}</a></li>
                                                {% endif %}
                                            </ul>
                                        </nav>
                                    </div>
                                    <div class="header-right-btn f-right d-none d-lg-block ml-30">
                                        {% if not app.user %}
                                            <a href="{{ path('app_register') }}" class="btn header-btn">{{ 'base.btn.become_member' | trans }}</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <!-- Mobile Menu -->
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Header End -->
        </header>
    {% endblock %}

    <!-- Flash Messages using SweetAlert2 -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    showToast('{{ message|escape('js') }}', '{{ type == 'error' ? 'error' : type }}', 5000);
                {% endfor %}
            {% endfor %}
        });
    </script>

    <main>
        {% block body %}
        {% endblock %}
    </main>

    {% block footer %}
        <footer>
            <div class="footer-area">
                <div class="container">
                    <div class="footer-top footer-padding">
                        <div class="row justify-content-center">
                            <div class="col-lg-6 col-md-8 col-sm-10">
                                <div class="single-footer-caption text-center">
                                    <!-- Logo -->
                                    <div class="footer-logo">
                                        <a href="{{ path('main') }}">
                                            <img src="{{ asset('assets/img/logos/logo2_footer.png') }}" alt="Barber Shop">
                                        </a>
                                    </div>
                                    <!-- Social -->
                                    <div class="footer-social">
                                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                                        <a href="#"><i class="fab fa-twitter"></i></a>
                                        <a href="#"><i class="fab fa-instagram"></i></a>
                                        <a href="#"><i class="fas fa-globe"></i></a>
                                    </div>
                                    <!-- Contact -->
                                    <div class="footer-contact">
                                        <p>
                                            <a href="mailto:{{ contact_email }}">{{ contact_email }}</a>
                                        </p>
                                        <p>
                                            <a href="tel:{{ contact_phone_link }}">{{ contact_phone }}</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="footer-bottom">
                        <div class="row">
                            <!-- Copyright - Right -->
                            <div class="footer-copy-right">
                                <p>&copy; {{ 'now'|date('Y') }} {{ 'base.footer.text' | trans }}</p>
                            </div>

                            <!-- Developer credit - Left -->
                            <div class="footer-developer">
                                {{ 'footer.developed_by'|trans }}&nbsp;&nbsp;<a href="https://mladenraykov.com" target="_blank">
                                    <img class="madji-img-footer" src="{{ asset('assets/img/logos/logo-no-background.png') }}" alt="MADJI logo">
                                </a>
                            </div>

                            <!-- Legal links - Center (or below on mobile) -->
                            <div class="footer-legal">
                                <a href="{{ path('privacy_policy') }}">{{ 'legal.privacy_policy.title' | trans }}</a>
                                <span>|</span>
                                <a href="{{ path('terms_of_service') }}">{{ 'legal.terms.title' | trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}

    <!-- Scroll Up -->
    <div id="back-top">
        <a title="{{ 'base.footer.go_to_top' | trans }}" href="#"><i class="fas fa-level-up-alt"></i></a>
    </div>

    {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        <!-- SweetAlert2 -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <!-- Toast Translations -->
        <script>
            window.toastTranslations = {
                success: '{{ 'toast.title.success'|trans({}, 'flash_messages') }}',
                error: '{{ 'toast.title.error'|trans({}, 'flash_messages') }}',
                warning: '{{ 'toast.title.warning'|trans({}, 'flash_messages') }}',
                info: '{{ 'toast.title.info'|trans({}, 'flash_messages') }}'
            };
        </script>

        <!-- Template JS -->
        <script src="{{ asset('assets/js/vendor/modernizr-3.5.0.min.js') }}"></script>
        <script src="{{ asset('assets/js/vendor/jquery-1.12.4.min.js') }}"></script>
        <script src="{{ asset('assets/js/popper.min.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.slicknav.min.js') }}"></script>
        <script src="{{ asset('assets/js/owl.carousel.min.js') }}"></script>
        <script src="{{ asset('assets/js/slick.min.js') }}"></script>
        <script src="{{ asset('assets/js/wow.min.js') }}"></script>
        <script src="{{ asset('assets/js/animated.headline.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.magnific-popup.js') }}"></script>
        <script src="{{ asset('assets/js/gijgo.min.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.nice-select.min.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.sticky.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.counterup.min.js') }}"></script>
        <script src="{{ asset('assets/js/waypoints.min.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.countdown.min.js') }}"></script>
        <script src="{{ asset('assets/js/hover-direction-snake.min.js') }}"></script>
        <script src="{{ asset('assets/js/contact.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.form.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.validate.min.js') }}"></script>
        <script src="{{ asset('assets/js/mail-script.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.ajaxchimp.min.js') }}"></script>
        <script src="{{ asset('assets/js/plugins.js') }}"></script>
        <script src="{{ asset('assets/js/main.js') }}"></script>

        <!-- Toast Notification System (Simple - no Bootstrap dependency) -->
        <script src="{{ asset('js/toast.js') }}"></script>

        <!-- Loading Manager -->
        <script src="{{ asset('js/loading.js') }}"></script>

        <!-- Form Validation Helper -->
        <script src="{{ asset('js/form_validation.js') }}"></script>

        <!-- Testimonials Carousel -->
        <script src="{{ asset('js/testimonials.js') }}"></script>

        <!-- Auto-hide flash messages after 5 seconds -->
        <script>
            $(document).ready(function() {
                setTimeout(function() {
                    $('.alert').fadeOut('slow', function() {
                        $(this).remove();
                    });
                }, 5000);
            });
        </script>
    {% endblock %}
</body>
</html>
