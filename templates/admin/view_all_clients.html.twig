{% extends '/base.html.twig' %}
{% block title_sign_in_out_reg %}
    {% include '/login_button.html.twig' %}
{% endblock %}

{% block body %}
{% block stylesheets  %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
{% endblock %}
<table class="styled-table">
    <thead>
    <tr>
    {% for field in fields %}
        <th>{{ field }}</th>
    {% endfor %}
    </tr>
    </thead>

    <tbody>
    {% for client in clients %}
    <tr>
        <td>{{ client.id }}</td>
        <td>{{ client.email }}</td>
        <td>
        {% for role in client.roles %}
            {{ role }}
        {% endfor %}
        </td>
        <td>{{ client.first_name }}</td>
        <td>{{ client.last_name }}</td>
        <td>{{ client.nick_name }}</td>
        <td>{{ client.phone }}</td>
        <td>{{ client.date_added|date('d-m-Y') }}</td>
        <td>{{ client.date_banned|date('d-m-Y') }}</td>
        <td>{{ client.date_last_update|date('d-m-Y') }}</td>
    <tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

