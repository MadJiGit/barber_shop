{% extends 'base.html.twig' %}

{% block title %}{{ 'check_email.title' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/registration.css') }}">
{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>{{ 'check_email.hero_title' | trans }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? Check Email Section Start -->
    <section class="check-email-section section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8 col-lg-10 col-md-12">
                    <div class="check-email-card">
                        <div class="icon-wrapper text-center mb-4 email-icon">
                            <i class="fas fa-envelope-open-text"></i>
                        </div>

                        <h3 class="text-center mb-4">{{ 'check_email.heading' | trans }}</h3>

                        <div class="alert alert-info">
                            <p class="mb-3">
                                <strong>{{ 'check_email.sent_to' | trans }}</strong><br>
                                <span class="email-display">{{ email }}</span>
                            </p>
                            {{ 'check_email.instructions' | trans }}
                        </div>

                        <div class="card mt-4">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-info-circle text-primary"></i> {{ 'check_email.info_title' | trans }}
                                </h5>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success mr-2"></i>
                                        {{ 'check_email.valid_24h' | trans }}
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success mr-2"></i>
                                        {{ 'check_email.check_spam' | trans }}
                                    </li>
                                    <li class="mb-0">
                                        <i class="fas fa-check text-success mr-2"></i>
                                        {{ 'check_email.after_confirm' | trans }}
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="text-center mt-5">
                            <p class="text-muted">
                                {{ 'check_email.already_confirmed' | trans }}
                                <a href="{{ path('app_login') }}" class="text-primary fw-bold">
                                    {{ 'check_email.login_here' | trans }}
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Check Email Section End -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}
