{% extends 'base.html.twig' %}

{% block title %}Регистрация - Barber Shop{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>Регистрация</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? Registration Section Start -->
    <section class="registration-section section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-10">
                    <div class="registration-form-wrapper">
                        <div class="registration-form">
                            <!-- Section Title -->
                            <div class="section-tittle text-center mb-50">
                                <h2>Създайте своя профил</h2>
                                <p>Присъединете се към нас и започнете да резервирате вашите любими услуги.</p>
                            </div>

                            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

                                {% if form_errors(registrationForm) %}
                                    <div class="alert alert-danger" role="alert">
                                        <i class="fas fa-exclamation-circle"></i>
                                        {{ form_errors(registrationForm) }}
                                    </div>
                                {% endif %}

                                <div class="form-group mb-30">
                                    <label for="{{ registrationForm.email.vars.id }}" class="form-label">
                                        <i class="fas fa-envelope"></i> Имейл адрес
                                    </label>
                                    {{ form_widget(registrationForm.email, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'your@email.com'
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.email) }}
                                </div>

                                <div class="form-group mb-30">
                                    <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
                                        <i class="fas fa-lock"></i> Парола
                                    </label>
                                    {{ form_widget(registrationForm.plainPassword, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'Минимум 6 символа'
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.plainPassword) }}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle"></i> Паролата трябва да е минимум 6 символа
                                    </small>
                                </div>

                                <div class="form-check mb-30">
                                    {{ form_widget(registrationForm.agreeTerms, {
                                        'attr': {
                                            'class': 'form-check-input'
                                        }
                                    }) }}
                                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label">
                                        Съгласен съм с <a href="#" class="text-primary">Условията за ползване</a>
                                    </label>
                                    {{ form_errors(registrationForm.agreeTerms) }}
                                </div>

                                <div class="d-grid gap-2 mb-30">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-user-plus"></i> Регистрирай се
                                    </button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">
                                        Вече имате профил?
                                        <a href="{{ path('app_login') }}" class="text-primary fw-bold">
                                            Влезте тук
                                        </a>
                                    </p>
                                </div>

                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Registration Section End -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .registration-section {
            background: #f8f9fa;
            min-height: 60vh;
        }

        .registration-form-wrapper {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            padding: 50px 40px;
        }

        .registration-form .section-tittle h2 {
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .registration-form .section-tittle p {
            color: #7f8c8d;
            font-size: 16px;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .form-label i {
            color: #d4a024;
            margin-right: 8px;
        }

        .form-control-lg {
            padding: 15px 20px;
            font-size: 16px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .form-control-lg:focus {
            border-color: #d4a024;
            box-shadow: 0 0 0 0.2rem rgba(212, 160, 36, 0.25);
        }

        .form-check-input:checked {
            background-color: #d4a024;
            border-color: #d4a024;
        }

        .form-check-label {
            color: #2c3e50;
        }

        .form-check-label a {
            text-decoration: none;
            font-weight: 600;
        }

        .form-check-label a:hover {
            text-decoration: underline;
        }

        .btn-primary {
            background-color: #d4a024;
            border-color: #d4a024;
            padding: 15px;
            font-size: 18px;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #b8891f;
            border-color: #b8891f;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(212, 160, 36, 0.3);
        }

        .alert {
            border-radius: 10px;
            padding: 15px 20px;
        }

        .alert i {
            margin-right: 10px;
        }

        .form-text {
            display: block;
            margin-top: 8px;
            color: #6c757d;
        }

        .form-text i {
            margin-right: 5px;
        }

        .invalid-feedback {
            display: block;
            margin-top: 8px;
            color: #dc3545;
        }

        @media (max-width: 768px) {
            .registration-form-wrapper {
                padding: 30px 20px;
            }
        }
    </style>
{% endblock %}
