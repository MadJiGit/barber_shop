{% extends 'base.html.twig' %}

{% block title %}{{ 'register.title' | trans }}{% endblock %}

{% block body %}
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>{{ 'register.hero_title' | trans }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? Registration Section Start -->
    <section class="registration-section section-padding30">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-10">
                    <div class="registration-form-wrapper">
                        <div class="registration-form">
                            <!-- Section Title -->
                            <div class="section-tittle text-center mb-50">
                                <h2>{{ 'register.section_title' | trans }}</h2>
                                <p>{{ 'register.section_description' | trans }}</p>
                            </div>

                            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

                                {% if form_errors(registrationForm) %}
                                    <div class="alert alert-danger" role="alert">
                                        <i class="fas fa-exclamation-circle"></i>
                                        {{ form_errors(registrationForm) }}
                                    </div>
                                {% endif %}

                                <div class="form-group mb-30">
                                    <label for="{{ registrationForm.email.vars.id }}" class="form-label">
                                        <i class="fas fa-envelope"></i> {{ 'register.email_label' | trans }}
                                    </label>
                                    {{ form_widget(registrationForm.email, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'register.email_placeholder' | trans
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.email) }}
                                </div>

                                <div class="form-group mb-30">
                                    <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
                                        <i class="fas fa-lock"></i> {{ 'register.password_label' | trans }}
                                    </label>
                                    {{ form_widget(registrationForm.plainPassword, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'register.password_placeholder' | trans
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.plainPassword) }}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle"></i> {{ 'register.password_hint' | trans }}
                                    </small>
                                </div>

                                <div class="form-group mb-30">
                                    <label for="{{ registrationForm.plainRepeatPassword.vars.id }}" class="form-label">
                                        <i class="fas fa-lock"></i> {{ 'register.repeat_password_label' | trans }}
                                    </label>
                                    {{ form_widget(registrationForm.plainRepeatPassword, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'register.repeat_password_placeholder' | trans
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.plainPassword) }}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle"></i> {{ 'register.repeat_password_hint' | trans }}
                                    </small>
                                </div>

                                <div class="form-check mb-30">
                                    {{ form_widget(registrationForm.agreeTerms, {
                                        'attr': {
                                            'class': 'form-check-input'
                                        }
                                    }) }}
                                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label">
                                        {{ 'register.agree_terms' | trans }} <a href="#" class="text-primary">{{ 'register.terms_link' | trans }}</a>
                                    </label>
                                    {{ form_errors(registrationForm.agreeTerms) }}
                                </div>

                                <div class="d-grid gap-2 mb-30">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-user-plus"></i> {{ 'register.submit' | trans }}
                                    </button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">
                                        {{ 'register.have_account' | trans }}
                                        <a href="{{ path('app_login') }}" class="text-primary fw-bold">
                                            {{ 'register.login_here' | trans }}
                                        </a>
                                    </p>
                                </div>

                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Registration Section End -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}
