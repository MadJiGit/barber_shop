{% extends 'base.html.twig' %}

{% block title %}{{ 'legal.privacy_policy.title' | trans }}{% endblock %}

{% block body_class %}legal-page{% endblock %}

{% block header %}
    <header>
        <!--? Header Start -->
        <div class="header-area pt-20">
            <div class="main-header header-sticky">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <!-- Logo -->
                        <div class="col-xl-2 col-lg-2 col-md-1">
                            <div class="logo">
                                <a href="{{ path('main') }}">
                                    <img src="{{ asset('assets/img/logos/logos.png') }}" alt="Barber Shop Logo">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-10 col-lg-10 col-md-10">
                            <div class="menu-main d-flex align-items-center justify-content-end">
                                <!-- Main Menu -->
                                <div class="main-menu f-right d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li><a href="{{ path('main') }}">{{ 'base.nav.home' | trans }}</a></li>
                                            {% if app.user %}
                                                <li><a href="{{ path('appointment_book', {id: app.user.id}) }}">{{ 'base.nav.book_appointment' | trans }}</a></li>
                                                {% if is_granted('ROLE_MANAGER') %}
                                                    <li><a href="{{ path('manager_dashboard', {id: app.user.id}) }}">{{ 'base.nav.manager' | trans }}</a></li>
                                                {% endif %}
                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <li><a href="{{ path('admin', {id: app.user.id}) }}">{{ 'base.nav.admin' | trans }}</a></li>
                                                {% endif %}
                                                <li><a href="{{ path('profile_edit', {id: app.user.id}) }}">{{ 'base.nav.hello' | trans }}, {{ app.user.nickName ?? app.user.firstName ?? app.user.lastName ?? app.user.email }}</a></li>
                                                <li><a href="{{ path('app_logout') }}">{{ 'base.nav.logout' | trans }}</a></li>
                                            {% else %}
                                                <li><a href="{{ path('app_login') }}">{{ 'base.nav.login' | trans }}</a></li>
                                                <li><a href="{{ path('app_register') }}">{{ 'base.nav.register' | trans }}</a></li>
                                            {% endif %}
                                            {% if app.request.locale == 'en' %}
                                                <li><a href="{{ path('app_locale', {'_locale': 'bg'}) }}">{{ 'base.nav.BG' | trans }}</a></li>
                                            {% else %}
                                                <li><a href="{{ path('app_locale', {'_locale': 'en'}) }}">{{ 'base.nav.EN' | trans }}</a></li>
                                            {% endif %}
                                        </ul>
                                    </nav>
                                </div>
                                <div class="header-right-btn f-right d-none d-lg-block ml-30">
                                    {% if not app.user %}
                                        <a href="{{ path('app_register') }}" class="btn header-btn">{{ 'base.btn.become_member' | trans }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <!-- Mobile Menu -->
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
    </header>
{% endblock %}

{% block body %}
    <div class="container legal-page-container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <h1 class="legal-page-title">{{ 'legal.privacy_policy.title' | trans }}</h1>
                <p class="legal-last-updated"><small>{{ 'legal.last_updated' | trans }}: {{ 'now'|date('d.m.Y') }}</small></p>

                <div class="legal-content">
                    <section class="mb-5">
                        <h2 class="legal-section-title">{{ 'legal.privacy_policy.section1.title' | trans }}</h2>
                        <p>{{ 'legal.privacy_policy.section1.content' | trans }}</p>
                    </section>

                    <section class="mb-5">
                        <h2 class="legal-section-title">{{ 'legal.privacy_policy.section2.title' | trans }}</h2>
                        <p>{{ 'legal.privacy_policy.section2.intro' | trans }}</p>
                        <ul>
                            <li>{{ 'legal.privacy_policy.section2.item1' | trans }}</li>
                            <li>{{ 'legal.privacy_policy.section2.item2' | trans }}</li>
                            <li>{{ 'legal.privacy_policy.section2.item3' | trans }}</li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h2 class="legal-section-title">{{ 'legal.privacy_policy.section3.title' | trans }}</h2>
                        <p>{{ 'legal.privacy_policy.section3.content' | trans }}</p>
                    </section>

                    <section class="mb-5">
                        <h2 class="legal-section-title">{{ 'legal.privacy_policy.section4.title' | trans }}</h2>
                        <p>{{ 'legal.privacy_policy.section4.intro' | trans }}</p>
                        <ul>
                            <li>{{ 'legal.privacy_policy.section4.item1' | trans }}</li>
                            <li>{{ 'legal.privacy_policy.section4.item2' | trans }}</li>
                            <li>{{ 'legal.privacy_policy.section4.item3' | trans }}</li>
                            <li>{{ 'legal.privacy_policy.section4.item4' | trans }}</li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h2 class="legal-section-title">{{ 'legal.privacy_policy.section5.title' | trans }}</h2>
                        <p>{{ 'legal.privacy_policy.section5.content' | trans }}</p>
                    </section>

                    <section class="mb-5">
                        <h2 class="legal-section-title">{{ 'legal.privacy_policy.section6.title' | trans }}</h2>
                        <p>{{ 'legal.privacy_policy.section6.content' | trans({
                            '%contact_email%': contact_email,
                            '%contact_phone%': contact_phone,
                            '%contact_phone_link%': contact_phone_link
                        })|raw }}</p>
                    </section>
                </div>

                <div class="mt-5 text-center">
                    <a href="{{ path('main') }}" class="legal-back-btn">{{ 'legal.back_to_home' | trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
